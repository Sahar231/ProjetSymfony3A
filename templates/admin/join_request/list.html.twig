{% extends 'baseBack.html.twig' %}

{% block title %}Join Requests Management - Admin{% endblock %}

{% block body %}
<!-- Page content START -->
<div class="page-content">
	<!-- Top bar START -->
	<nav class="navbar top-bar navbar-light border-bottom py-0 py-xl-3">
		<div class="container-fluid p-0">
			<div class="d-flex align-items-center w-100">
				<div class="d-flex align-items-center d-xl-none">
					<a class="navbar-brand" href="">
						<img class="light-mode-item navbar-brand-item h-30px" src="{{ asset('assets/images/logo-mobile.svg') }}" alt="">
						<img class="dark-mode-item navbar-brand-item h-30px" src="{{ asset('assets/images/logo-mobile-light.svg') }}" alt="">
					</a>
				</div>
				<div class="navbar-expand-xl sidebar-offcanvas-menu">
					<button class="navbar-toggler me-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar" aria-expanded="false" aria-label="Toggle navigation" data-bs-auto-close="outside">
						<i class="bi bi-text-right fa-fw h2 lh-0 mb-0 rtl-flip"></i>
					</button>
				</div>
			</div>
		</div>
	</nav>
	<!-- Top bar END -->

	<!-- Page main content START -->
	<div class="page-content-wrapper border">
		<!-- Title -->
		<div class="row">
			<div class="col-12 mb-3">
				<h1 class="h3 mb-0"><i class="fas fa-hand-paper me-2"></i>Join Requests Management</h1>
			</div>
		</div>

		<!-- Breadcrumb -->
		<div class="row mb-3">
			<div class="col-12">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb bg-light p-3 rounded">
						<li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin Dashboard</a></li>
						<li class="breadcrumb-item active" aria-current="page">Join Requests</li>
					</ol>
				</nav>
			</div>
		</div>

		<!-- Search and Filter -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="card">
					<div class="card-body p-3">
						<form method="GET" class="row g-3 align-items-end">
							<div class="col-md-4">

								<label for="status" class="form-label">Status</label>
								<select class="form-select" id="status" name="status">
									<option value="">All Status</option>
									<option value="PENDING" {% if status == 'PENDING' %}selected{% endif %}>Pending</option>
									<option value="APPROVED" {% if status == 'APPROVED' %}selected{% endif %}>Approved</option>
									<option value="REJECTED" {% if status == 'REJECTED' %}selected{% endif %}>Rejected</option>
								</select>
							</div>

						<div class="col-md-6">
							<label for="sort" class="form-label">Sort by</label>
							<select class="form-select" id="sort" name="sort">
								<option value="date_desc" {% if sort == 'date_desc' %}selected{% endif %}>Newest</option>
								<option value="date_asc" {% if sort == 'date_asc' %}selected{% endif %}>Oldest</option>
								</select>
							</div>

							<div class="col-md-3">
								<button type="submit" class="btn btn-primary w-100">
									<i class="fas fa-filter me-2"></i>Filter
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		<!-- Join Requests Table -->
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="table-responsive">
						<table class="table table-hover table-sm mb-0">
							<thead class="border-top">
								<tr>
									<th scope="col" width="25%">Club Name</th>
									<th scope="col" width="25%">User Name</th>
									<th scope="col" width="15%">Status</th>
									<th scope="col" width="20%">Requested Date</th>
									<th scope="col" width="15%">Actions</th>
								</tr>
							</thead>
							<tbody>
								{% if joinRequests|length > 0 %}
									{% for jr in joinRequests %}
										<tr>
											<td>
												<div>
													<h6 class="mb-0">
														<a href="{{ path('admin_club_show', {'id': jr.club.id}) }}">
															{{ jr.club.name }}
														</a>
													</h6>
												</div>
											</td>
											<td>
												<div>
													<h6 class="mb-0">{{ jr.user.firstName }} {{ jr.user.lastName }}</h6>
													<small class="text-muted">{{ jr.user.email }}</small>
												</div>
											</td>
											<td>
												{% if jr.status == 'PENDING' %}
													<span class="badge bg-warning">Pending</span>
												{% elseif jr.status == 'APPROVED' %}
													<span class="badge bg-success">Approved</span>
												{% elseif jr.status == 'REJECTED' %}
													<span class="badge bg-danger">Rejected</span>
												{% endif %}
											</td>
											<td>
												<small>{{ jr.requestedAt|date('d/m/Y H:i') }}</small>
											</td>
											<td>
												<div class="btn-group btn-group-sm" role="group">
													{% if jr.status == 'PENDING' %}
														<form method="POST" action="{{ path('admin_join_request_approve', {'id': jr.id}) }}" class="d-inline" onsubmit="return confirm('Approve this request?')">
															<button type="submit" class="btn btn-outline-success" data-bs-toggle="tooltip" title="Approve">
																<i class="fas fa-check"></i>
															</button>
														</form>
														<form method="POST" action="{{ path('admin_join_request_reject', {'id': jr.id}) }}" class="d-inline" onsubmit="return confirm('Reject this request?')">
															<button type="submit" class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Reject">
																<i class="fas fa-times"></i>
															</button>
														</form>
													{% else %}
														<span class="text-muted small">No actions</span>
													{% endif %}
												</div>
											</td>
										</tr>
									{% endfor %}
								{% else %}
									<tr>
										<td colspan="5" class="text-center text-muted py-4">
											<i class="fas fa-inbox mb-3" style="font-size: 2rem;"></i>
											<p class="mb-0">No join requests found</p>
										</td>
									</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

		<!-- Statistics -->
		<div class="row mt-4">
			<div class="col-md-4">
				<div class="card text-center">
					<div class="card-body">
						<h6 class="text-muted mb-2">Total Requests</h6>
						<h3 class="mb-0 text-primary">{{ totalRequests }}</h3>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card text-center">
					<div class="card-body">
						<h6 class="text-muted mb-2">Pending</h6>
						<h3 class="mb-0 text-warning">{{ pendingRequests }}</h3>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card text-center">
					<div class="card-body">
						<h6 class="text-muted mb-2">Approved</h6>
						<h3 class="mb-0 text-success">{{ approvedRequests }}</h3>
					</div>
				</div>
			</div>
		</div>

		<!-- Return Button -->
		<div class="row mt-4">
			<div class="col-12">
				<a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
					<i class="fas fa-arrow-left me-2"></i>Return to Dashboard
				</a>
			</div>
		</div>
	</div>
	<!-- Page main content END -->
</div>
<!-- Page content END -->
{% endblock %}
