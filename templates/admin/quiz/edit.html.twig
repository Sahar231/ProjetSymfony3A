{% extends 'base.html.twig' %}

{% block title %}Edit Quiz - Admin{% endblock %}

{% block body %}
<!-- Breadcrumb START -->
<section class="py-3 bg-light">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_quiz_list') }}">All Quizzes</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
</section>
<!-- Breadcrumb END -->

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="mb-4">
                <h1 class="mb-2">
                    <i class="fas fa-pencil-alt"></i> Edit Quiz: {{ quiz.title }}
                </h1>
                <p class="text-muted">
                    <i class="fas fa-info-circle"></i> Update the quiz details and questions.
                </p>
            </div>

            {{ include('quiz/_form.html.twig', {
                form: form,
                button_label: 'Update Quiz',
                cancel_url: path('admin_quiz_list')
            }) }}

            <!-- Return to Dashboard Button -->
            <div class="mt-4">
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Return to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
