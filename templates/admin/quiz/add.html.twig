{% extends 'base.html.twig' %}

{% block title %}admin-quiz-add{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Eduport - Admin Add Quiz</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="shortcut icon" href="/assets/images/favicon.ico">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;700&family=Roboto:wght@400;500;700&display=swap">
	<link rel="stylesheet" type="text/css" href="/assets/vendor/font-awesome/css/all.min.css">
	<link rel="stylesheet" type="text/css" href="/assets/vendor/bootstrap-icons/bootstrap-icons.css">
	<link rel="stylesheet" type="text/css" href="/assets/css/style.css">
</head>
<body>

<header class="navbar-light navbar-sticky">
	<nav class="navbar navbar-expand-xl">
		<div class="container">
			<a class="navbar-brand" href="{{ path("app_home") }}">
				<img class="light-mode-item navbar-brand-item" src="/assets/images/logo.svg" alt="logo">
				<img class="dark-mode-item navbar-brand-item" src="/assets/images/logo-light.svg" alt="logo">
			</a>
			<button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
				<span class="navbar-toggler-animation"><span></span><span></span><span></span></span>
			</button>
			<div class="navbar-collapse w-100 collapse" id="navbarCollapse">
				<ul class="navbar-nav navbar-nav-scroll mx-auto">
					<li class="nav-item"><a class="nav-link" href="{{ path("app_home") }}">Home</a></li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="managementMenu" data-bs-toggle="dropdown">Management</a>
						<ul class="dropdown-menu" aria-labelledby="managementMenu">
							<li><a class="dropdown-item" href="{{ path('admin_formation_list') }}"><i class="bi bi-book me-2"></i>Formations</a></li>
							<li><a class="dropdown-item" href="{{ path('admin_quiz_list') }}"><i class="bi bi-question-diamond me-2"></i>Quizzes</a></li>
							<li><a class="dropdown-item" href="{{ path('admin_club_list') }}"><i class="bi bi-people me-2"></i>Clubs</a></li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>

<main>
<section class="bg-dark align-items-center d-flex" style="background:url(assets/images/pattern/04.png) no-repeat center center; background-size:cover;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-white">Add Quiz</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
						<li class="breadcrumb-item"><a href="{{ path("app_home") }}">Home</a></li>
						<li class="breadcrumb-item"><a href="{{ path("admin_quiz_list") }}">Quiz</a></li>
						<li class="breadcrumb-item active">Add</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="row g-4">
			<!-- Sidebar START -->
			<div class="col-lg-3">
				<div class="card shadow h-100">
					<div class="card-header bg-light border-bottom">
						<h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Links</h5>
					</div>
					<div class="card-body">
						<ul class="list-unstyled">
							<li class="mb-2">
								<a href="{{ path('admin_formation_add') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
									<i class="bi bi-book me-2"></i>Add Formation
								</a>
							</li>
							<li class="mb-2">
								<a href="{{ path('admin_quiz_add') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
									<i class="bi bi-question-diamond me-2"></i>Add Quiz
								</a>
							</li>
							<li class="mb-0">
								<a href="{{ path('admin_club_add') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
									<i class="bi bi-people me-2"></i>Add Club
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<!-- Sidebar END -->

			<!-- Content START -->
			<div class="col-lg-9">
				<div class="card card-body shadow p-5">
					<h2 class="mb-4">Create New Quiz</h2>

					{# Afficher les messages flash #}
					{% for message in app.flashes('error') %}
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
							<strong>Erreur:</strong> {{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}

					{% for message in app.flashes('success') %}
						<div class="alert alert-success alert-dismissible fade show" role="alert">
							<strong>Succès:</strong> {{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}

					{{ form_start(form) }}
						<div class="mb-3">
							{{ form_label(form.title) }}
							{{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre du quiz'}}) }}
							{{ form_errors(form.title) }}
						</div>

						{# description removed as requested #}

						<div class="row">
							<div class="col-md-6">
								<div class="mb-3">
									{{ form_label(form.level) }}
									{{ form_widget(form.level, {'attr': {'class': 'form-select'}}) }}
									{{ form_errors(form.level) }}
								</div>
							</div>
							<div class="col-md-6">
								<div class="mb-3">
									{{ form_label(form.duration) }}
									{{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.duration) }}
								</div>
							</div>
						</div>

						{# Render questions collection if present #}
						<div class="mb-4">
							<div class="d-flex justify-content-between align-items-center mb-3">
								<h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Questions du Quiz</h5>
								<button type="button" class="btn btn-sm btn-success" id="add-question" data-form-id="questions">
									<i class="fas fa-plus me-1"></i>Ajouter une Question
								</button>
							</div>

							{{ form_errors(form.questions) }}

							{# Questions Collection #}
							<div class="questions-container" data-prototype="{{ form_widget(form.questions.vars.prototype)|e('html-attr') }}">
								{% for questionForm in form.questions %}
									<div class="card mb-3 question-item">
										<div class="card-header bg-light d-flex justify-content-between align-items-center">
											<h6 class="mb-0">
												<i class="fas fa-pencil-alt me-2"></i>Question #{{ loop.index }}
											</h6>
											<button type="button" class="btn btn-sm btn-danger remove-question" title="Supprimer cette question">
												<i class="fas fa-trash me-1"></i>Supprimer
											</button>
										</div>
										<div class="card-body">
											{# Question Text #}
											<div class="mb-3">
												{{ form_label(questionForm.text, 'Énoncé de la Question') }}
												{{ form_widget(questionForm.text, {
													'attr': {
														'class': 'form-control',
														'placeholder': 'Entrez la question...',
														'rows': 3
													}
												}) }}
												{{ form_errors(questionForm.text) }}
											</div>

											{# Responses #}
											<div class="mb-3">
												<div class="d-flex justify-content-between align-items-center mb-2">
													<label class="form-label mb-0"><i class="fas fa-check-square me-2"></i>Réponses Possibles</label>
													<button type="button" class="btn btn-sm btn-info add-reponse" title="Ajouter une réponse">
														<i class="fas fa-plus me-1"></i>Ajouter Réponse
													</button>
												</div>

												{{ form_errors(questionForm.reponses) }}

												{# Responses Collection #}
												<div class="reponses-container" data-prototype="{{ form_widget(questionForm.reponses.vars.prototype)|e('html-attr') }}">
													{% for reponseForm in questionForm.reponses %}
														<div class="reponse-item mb-2">
															<div class="input-group">
																{# Response Checkbox for Correct Answer #}
																<div class="input-group-text" style="min-width: 50px;">
																	{{ form_widget(reponseForm.isCorrect, {
																		'attr': {
																			'class': 'form-check-input m-0',
																			'title': 'Marquer comme réponse correcte'
																		}
																	}) }}
																</div>
																{# Response Content #}
																{{ form_widget(reponseForm.content, {
																	'attr': {
																		'class': 'form-control',
																		'placeholder': 'Entrez une réponse possible...'
																	}
																}) }}
																{# Remove Button #}
																<button type="button" class="btn btn-danger remove-reponse" title="Supprimer cette réponse">
																	<i class="fas fa-trash"></i>
																</button>
															</div>
															{{ form_errors(reponseForm.content) }}
															{{ form_errors(reponseForm.isCorrect) }}
														</div>
													{% endfor %}
												</div>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>

						<div class="d-flex gap-2">
							<button type="submit" class="btn btn-primary">{{ form.vars.data.id ? 'Mettre à jour' : 'Créer le Quiz' }}</button>
							<a href="{{ path('admin_quiz_list') }}" class="btn btn-outline-secondary">Annuler</a>
						</div>
					{{ form_end(form) }}
				</div>
				</div>
			</div>
			<!-- Content END -->
		</div>
	</div>
</section>
</main>

<footer class="pt-5 bg-light">
	<div class="container">
		<div class="row g-4">
			<div class="col-lg-3">
				<a class="me-0" href="{{ path("app_home") }}">
					<img class="light-mode-item h-40px" src="/assets/images/logo.svg" alt="logo">
					<img class="dark-mode-item h-40px" src="/assets/images/logo-light.svg" alt="logo">
				</a>
				<p class="my-3">Admin panel for managing quiz programs.</p>
			</div>
		</div>
		<hr class="mt-4 mb-0">
		<div class="py-3">
			<div class="text-center">
				<div class="text-body">Copyrights ©2023 Eduport. Build by <a href="https://www.webestica.com/" target="_blank">Webestica</a></div>
			</div>
		</div>
	</div>
</footer>

<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

<script src="/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/functions.js"></script>

</body>
</html>
{% endblock %}

