{% extends 'base.html.twig' %}

{% block title %}Éditer la Question{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-3">
                <a href="{{ path('admin_quiz_edit', {id: quiz.id}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour au Quiz
                </a>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">Éditer la Question</h3>
                    <p class="mb-0 small">Quiz: <strong>{{ quiz.title }}</strong></p>
                </div>

                <div class="card-body p-4">
                    {% if app.flashes %}
                        {% for type, messages in app.flashes %}
                            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                                {% for message in messages %}
                                    {{ message }}<br>
                                {% endfor %}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}
                    {% endif %}

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-group mb-3">
                        {{ form_label(form.text, 'Énoncé de la Question', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.text, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                        {% if form.text.vars.errors %}
                            <small class="text-danger">
                                {% for error in form.text.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </small>
                        {% endif %}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.correctAnswer, 'Réponse Correcte', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.correctAnswer, {'attr': {'class': 'form-control'}}) }}
                        {% if form.correctAnswer.vars.errors %}
                            <small class="text-danger">
                                {% for error in form.correctAnswer.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </small>
                        {% endif %}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Mettre à jour
                        </button>
                        <a href="{{ path('admin_quiz_edit', {id: quiz.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}

                    <hr class="my-4">

                    <form method="POST" action="{{ path('admin_question_delete', {id: question.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Supprimer cette Question
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
