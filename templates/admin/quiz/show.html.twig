{% extends 'base.html.twig' %}

{% block title %}Quiz Details - {{ quiz.title }}{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <!-- Breadcrumb START -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-dots">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_quiz_list') }}">All Quizzes</a></li>
                    <li class="breadcrumb-item active">{{ quiz.title }}</li>
                </ol>
            </nav>
            <!-- Breadcrumb END -->

            <!-- Quiz Header -->
            <div class="card mb-4 shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="mb-1">{{ quiz.title }}</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-person me-2"></i>Created by
                                {% if quiz.creator %}
                                    <strong>{{ quiz.creator.fullName }}</strong>
                                {% else %}
                                    Unknown
                                {% endif %}
                                <i class="bi bi-clock ms-3 me-2"></i>{{ quiz.createdAt|date('M d, Y') }}
                            </p>
                        </div>
                        <div>
                            {% if quiz.isApproved %}
                                <span class="badge bg-success fs-6"><i class="bi bi-check-circle me-1"></i>Approved</span>
                            {% elseif quiz.isArchived %}
                                <span class="badge bg-danger fs-6"><i class="bi bi-archive me-1"></i>Rejected</span>
                            {% else %}
                                <span class="badge bg-warning fs-6"><i class="bi bi-hourglass-split me-1"></i>Pending</span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Quiz Meta Info -->
                    <div class="row g-3 mt-3 pt-3 border-top">
                        <div class="col-md-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-question-diamond fs-5 text-primary me-2"></i>
                                <div>
                                    <p class="text-muted mb-0 small">Questions</p>
                                    <h6 class="mb-0">{{ quiz.questions|length }}</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-bar-chart fs-5 text-info me-2"></i>
                                <div>
                                    <p class="text-muted mb-0 small">Level</p>
                                    <h6 class="mb-0 text-capitalize">{{ quiz.level }}</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-hourglass-split fs-5 text-warning me-2"></i>
                                <div>
                                    <p class="text-muted mb-0 small">Duration</p>
                                    <h6 class="mb-0">
                                        {% set minutes = (quiz.duration / 60)|round(0, 'floor') %}
                                        {% set seconds = quiz.duration % 60 %}
                                        {{ minutes }}:{{ seconds < 10 ? '0' ~ seconds : seconds }} min
                                    </h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-check fs-5 text-success me-2"></i>
                                <div>
                                    <p class="text-muted mb-0 small">Total Score</p>
                                    <h6 class="mb-0">
                                        {% set totalScore = 0 %}
                                        {% for question in quiz.questions %}
                                            {% set totalScore = totalScore + question.score|number_format(2) %}
                                        {% endfor %}
                                        {{ totalScore|number_format(2) }}
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Questions Section -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-question-diamond me-2"></i>Questions Preview</h5>
                </div>
                <div class="card-body">
                    {% if quiz.questions|length > 0 %}
                        {% for i, question in quiz.questions %}
                            <div class="mb-4 pb-4 {% if not loop.last %}border-bottom{% endif %}">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="mb-2">
                                        <i class="bi bi-question-circle me-2 text-primary"></i>
                                        Question {{ i + 1 }}
                                    </h6>
                                    <span class="badge bg-secondary">{{ question.score }} points</span>
                                </div>
                                <p class="mb-3 text-dark">{{ question.question }}</p>

                                <div class="ms-3">
                                    <p class="text-muted small mb-2">Answer Choices:</p>
                                    <ul class="list-unstyled">
                                        {% for choice in question.choices %}
                                            <li class="mb-2">
                                                {% if choice == question.correctAnswer %}
                                                    <span class="badge bg-success me-2"><i class="bi bi-check-circle me-1"></i>Correct</span>
                                                {% else %}
                                                    <i class="bi bi-circle me-2 text-secondary"></i>
                                                {% endif %}
                                                {{ choice }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            No questions in this quiz yet!
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Action Buttons -->
            {% if not quiz.isApproved and not quiz.isArchived %}
                <div class="card shadow">
                    <div class="card-body">
                        <div class="alert alert-warning mb-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            This quiz is pending approval. Review all details above before taking action.
                        </div>

                        <div class="d-flex gap-2">
                            <!-- Approve Button -->
                            <form method="POST" action="{{ path('admin_quiz_approve', {id: quiz.id}) }}" class="d-inline">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Approve Quiz
                                </button>
                            </form>

                            <!-- Disapprove Button -->
                            <form method="POST" action="{{ path('admin_quiz_disapprove', {id: quiz.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to reject this quiz?');">
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-x-circle me-2"></i>Reject Quiz
                                </button>
                            </form>

                            <!-- Cancel Button -->
                            <a href="{{ path('admin_quizzes_approval', {status: 'pending'}) }}" class="btn btn-secondary btn-lg ms-auto">
                                <i class="bi bi-arrow-left me-2"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="text-end">
                    <a href="{{ path('admin_quizzes_approval', {status: quiz.isApproved ? 'approved' : 'archived'}) }}" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Back
                    </a>
                </div>
            {% endif %}

            <!-- Return to Dashboard Button -->
            <div class="mt-4">
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Return to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
