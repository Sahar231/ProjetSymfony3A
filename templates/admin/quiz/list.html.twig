{% extends 'base.html.twig' %}

{% block title %}All Quizzes - Admin{% endblock %}

{% block body %}
<main>
    <!-- Breadcrumb START -->
    <section class="py-3 bg-light">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin Dashboard</a></li>
                    <li class="breadcrumb-item active">All Quizzes</li>
                </ol>
            </nav>
        </div>
    </section>
    <!-- Breadcrumb END -->

    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h1 class="fs-2 mb-1"><i class="fas fa-list me-2"></i>All Quizzes</h1>
                                <p class="text-body mb-0">Manage all quizzes in the system</p>
                            </div>
                            <a href="{{ path('admin_quiz_add') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Create Quiz
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Content START -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- Search and Sort Form -->
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-body">
                            <form method="GET" class="row g-3 align-items-end">
                                <div class="col-md-6">
                                    <label for="searchInput" class="form-label">Search by Title or Description</label>
                                    <input type="text" class="form-control" id="searchInput" name="search" placeholder="Enter title or description..." value="{{ search }}">
                                </div>
                                <div class="col-md-4">
                                    <label for="sortSelect" class="form-label">Sort By</label>
                                    <select class="form-select" id="sortSelect" name="sort">
                                        <option value="date_desc" {% if sort == 'date_desc' %}selected{% endif %}>Newest First</option>
                                        <option value="date_asc" {% if sort == 'date_asc' %}selected{% endif %}>Oldest First</option>
                                        <option value="a_z" {% if sort == 'a_z' %}selected{% endif %}>A to Z</option>
                                        <option value="z_a" {% if sort == 'z_a' %}selected{% endif %}>Z to A</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    {% if quizzes|length > 0 %}
                        <!-- Quizzes Table -->
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-light border-bottom py-3">
                                <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Quiz List</h5>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Title</th>
                                            <th scope="col">Creator</th>
                                            <th scope="col">Level</th>
                                            <th scope="col">Questions</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Duration</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for quiz in quizzes %}
                                            <tr>
                                                <td>
                                                    <div>
                                                        <h6 class="mb-0 fw-bold">{{ quiz.title }}</h6>
                                                    </div>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        {% if quiz.creator %}
                                                            {{ quiz.creator.fullName }}
                                                        {% else %}
                                                            <span class="badge bg-secondary">Admin</span>
                                                        {% endif %}
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">{{ quiz.level|upper }}</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary">{{ quiz.questions|length }}</span>
                                                </td>
                                                <td>
                                                    {% if quiz.state == 'approved' and quiz.isApproved %}
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check-circle me-1"></i>Approved
                                                        </span>
                                                    {% elseif quiz.state == 'pending' %}
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-clock me-1"></i>Pending
                                                        </span>
                                                    {% elseif quiz.state == 'rejected' %}
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times-circle me-1"></i>Rejected
                                                        </span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="fas fa-clock me-1"></i>
                                                        {% set minutes = (quiz.duration / 60)|round(0, 'floor') %}
                                                        {% set seconds = quiz.duration % 60 %}
                                                        {{ minutes }}:{{ seconds < 10 ? '0' ~ seconds : seconds }}
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="{{ path('admin_quiz_show', {id: quiz.id}) }}" class="btn btn-sm btn-outline-primary" title="View">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="{{ path('admin_quiz_edit', {id: quiz.id}) }}" class="btn btn-sm btn-outline-secondary" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        {% if quiz.state == 'pending' %}
                                                            <form method="POST" action="{{ path('admin_quiz_approve', {id: quiz.id}) }}" style="display: inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('admin_quiz_approve' ~ quiz.id) }}">
                                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Approve" onclick="return confirm('Approve this quiz?');">
                                                                    <i class="fas fa-check"></i>
                                                                </button>
                                                            </form>
                                                            <form method="POST" action="{{ path('admin_quiz_disapprove', {id: quiz.id}) }}" style="display: inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('admin_quiz_disapprove' ~ quiz.id) }}">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Reject" onclick="return confirm('Reject this quiz?');">
                                                                    <i class="fas fa-times"></i>
                                                                </button>
                                                            </form>
                                                        {% endif %}
                                                        <button type="button" class="btn btn-sm btn-outline-danger" title="Delete" data-bs-toggle="modal" data-bs-target="#deleteModal{{ quiz.id }}">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>

                                                    <!-- Delete Modal -->
                                                    <div class="modal fade" id="deleteModal{{ quiz.id }}" tabindex="-1" role="dialog">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header bg-danger text-white">
                                                                    <h5 class="modal-title">
                                                                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Quiz
                                                                    </h5>
                                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to delete <strong>{{ quiz.title }}</strong>?</p>
                                                                    <p class="text-danger small"><i class="fas fa-info-circle me-1"></i>This action cannot be undone.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <form method="POST" action="{{ path('admin_quiz_delete', {id: quiz.id}) }}" style="display: inline;">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('admin_quiz_delete' ~ quiz.id) }}">
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% else %}
                        <!-- Empty State -->
                        <div class="alert alert-info text-center py-5" role="alert">
                            <i class="fas fa-inbox fa-3x mb-3 d-block text-muted"></i>
                            <h5><i class="fas fa-question-circle me-2"></i>No Quizzes Yet</h5>
                            <p class="text-muted mb-3">No quizzes have been created yet. Create your first quiz to get started.</p>
                            <a href="{{ path('admin_quiz_add') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Create New Quiz
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <!-- Content END -->

    <!-- Return to Dashboard Button -->
    <section class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Return to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}

