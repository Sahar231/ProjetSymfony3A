{% extends 'base.html.twig' %}

{% block title %}Admin - Courses List{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Tous les Cours</h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('admin_cours_create') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ajouter Cours
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Total Cours</h6>
                    <h2 id="stat-total">{{ all_cours|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">En Attente</h6>
                    <h2 id="stat-pending">{{ all_cours|filter(course => course.status == 'PENDING')|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Approuvés</h6>
                    <h2 id="stat-approved">{{ all_cours|filter(course => course.status == 'APPROVED')|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Refusés</h6>
                    <h2 id="stat-refused">{{ all_cours|filter(course => course.status == 'REFUSED')|length }}</h2>
                </div>
            </div>
        </div>
    </div>

    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'success' ? 'success' : (type == 'warning' ? 'warning' : 'info') }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    {% if all_cours|length == 0 %}
        <div class="alert alert-info">Aucun cours disponible.</div>
    {% else %}
        <!-- Search and Filter -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body">
                <form method="GET" class="row g-3" id="courseSearchForm">
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="courseSearch" placeholder="Rechercher par titre...">
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="courseStatusFilter">
                            <option value="">Tous les statuts</option>
                            <option value="PENDING">En attente</option>
                            <option value="APPROVED">Approuvé</option>
                            <option value="REFUSED">Refusé</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="courseInstructorFilter">
                            <option value="">Tous les instructeurs</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="courseSort">
                            <option value="title">Trier par: Titre (A-Z)</option>
                            <option value="title-desc">Titre (Z-A)</option>
                            <option value="date">Date (récent)</option>
                            <option value="date-old">Date (ancien)</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="reset" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover" id="coursesTable">
                <thead class="table-light">
                    <tr>
                        <th>Titre</th>
                        <th>Catégorie</th>
                        <th>Statut</th>
                        <th>Créé par</th>
                        <th>Date de création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cours in all_cours %}
                        <tr data-title="{{ cours.title }}" data-status="{{ cours.status }}" data-instructor="{{ cours.createdBy }}" data-date="{{ cours.createdAt|date('Y-m-d H:i:s') }}">
                            <td>{{ cours.title }}</td>
                            <td>{{ cours.category ?? 'N/A' }}</td>
                            <td>
                                <span class="badge bg-{{ cours.status == 'APPROVED' ? 'success' : (cours.status == 'REFUSED' ? 'danger' : 'warning') }}">
                                    {{ cours.status }}
                                </span>
                            </td>
                            <td>{{ cours.createdBy }}</td>
                            <td>{{ cours.createdAt ? cours.createdAt|date('d/m/Y H:i') : 'N/A' }}</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('admin_cours_show', {id: cours.id}) }}" class="btn btn-info" title="Voir">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('admin_cours_edit', {id: cours.id}) }}" class="btn btn-warning" title="Modifier">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    {% if cours.status == 'PENDING' %}
                                        <form action="{{ path('admin_cours_approve', {id: cours.id}) }}" method="POST" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ cours.id) }}">
                                            <button type="submit" class="btn btn-success btn-sm" title="Approuver" onclick="return confirm('Approuver ce cours ?')">
                                                <i class="bi bi-check-circle"></i> Approuver
                                            </button>
                                        </form>
                                        <form action="{{ path('admin_cours_refuse', {id: cours.id}) }}" method="POST" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('refuse' ~ cours.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Refuser" onclick="return confirm('Refuser ce cours ?')">
                                                <i class="bi bi-x-circle"></i> Refuser
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form action="{{ path('admin_cours_delete', {id: cours.id}) }}" method="POST" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cours.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" title="Supprimer" onclick="return confirm('Êtes-vous sûr ?')">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                    <a href="{{ path('admin_chapitre_index', {coursId: cours.id}) }}" class="btn btn-secondary btn-sm" title="Chapitres">
                                        <i class="bi bi-book"></i> Chapitres
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const courseSearch = document.getElementById('courseSearch');
    const courseStatusFilter = document.getElementById('courseStatusFilter');
    const courseInstructorFilter = document.getElementById('courseInstructorFilter');
    const courseSort = document.getElementById('courseSort');
    const coursesRows = document.querySelectorAll('#coursesTable tbody tr');

    // Get unique instructors for dropdown
    let instructors = new Set();
    coursesRows.forEach(row => {
        const instructor = row.dataset.instructor;
        if (instructor) instructors.add(instructor);
    });
    Array.from(instructors).sort().forEach(instructor => {
        const option = document.createElement('option');
        option.value = instructor;
        option.textContent = instructor;
        courseInstructorFilter.appendChild(option);
    });

    // Filter and Sort function
    function filterAndSort(searchInput, statusFilter, instructorFilter, sortSelect, rows) {
        const searchTerm = searchInput.value.toLowerCase();
        const statusValue = statusFilter.value;
        const instructorValue = instructorFilter.value;
        const sortType = sortSelect.value;

        // Create array of visible rows
        const visibleRows = Array.from(rows).filter(row => {
            // Search filter (Title column)
            const title = row.dataset.title.toLowerCase();
            const titleMatch = title.includes(searchTerm);

            // Status filter
            let statusMatch = true;
            if (statusValue) {
                const status = row.dataset.status;
                statusMatch = status === statusValue;
            }

            // Instructor filter
            let instructorMatch = true;
            if (instructorValue) {
                const instructor = row.dataset.instructor;
                instructorMatch = instructor === instructorValue;
            }

            return titleMatch && statusMatch && instructorMatch;
        });

        // Sort rows
        visibleRows.sort((a, b) => {
            let aValue, bValue;
            
            if (sortType === 'title' || sortType === 'title-desc') {
                aValue = a.dataset.title.toLowerCase();
                bValue = b.dataset.title.toLowerCase();
            } else if (sortType === 'date' || sortType === 'date-old') {
                aValue = new Date(a.dataset.date);
                bValue = new Date(b.dataset.date);
            }

            if (sortType.includes('desc') || sortType === 'date-old') {
                return bValue > aValue ? 1 : -1;
            } else {
                return aValue > bValue ? 1 : -1;
            }
        });

        // Show/hide rows
        rows.forEach(row => {
            row.style.display = 'none';
        });
        visibleRows.forEach(row => {
            row.style.display = '';
        });
    }

    // Event listeners
    courseSearch.addEventListener('input', () => {
        filterAndSort(courseSearch, courseStatusFilter, courseInstructorFilter, courseSort, coursesRows);
    });
    courseStatusFilter.addEventListener('change', () => {
        filterAndSort(courseSearch, courseStatusFilter, courseInstructorFilter, courseSort, coursesRows);
    });
    courseInstructorFilter.addEventListener('change', () => {
        filterAndSort(courseSearch, courseStatusFilter, courseInstructorFilter, courseSort, coursesRows);
    });
    courseSort.addEventListener('change', () => {
        filterAndSort(courseSearch, courseStatusFilter, courseInstructorFilter, courseSort, coursesRows);
    });

    // Reset form
    document.getElementById('courseSearchForm').addEventListener('reset', () => {
        setTimeout(() => {
            filterAndSort(courseSearch, courseStatusFilter, courseInstructorFilter, courseSort, coursesRows);
        }, 0);
    });
});
</script>
{% endblock %}
