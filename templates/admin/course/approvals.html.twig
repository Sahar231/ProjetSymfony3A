{% extends 'baseBack.html.twig' %}

{% block title %}Course Approvals - Admin{% endblock %}

{% block body %}
<!-- Page content START -->
<div class="page-content">
	<!-- Top bar START -->
	<nav class="navbar top-bar navbar-light border-bottom py-0 py-xl-3">
		<div class="container-fluid p-0">
			<div class="d-flex align-items-center w-100">
				<!-- Logo and Toggler -->
				<div class="d-flex align-items-center d-xl-none">
					<a class="navbar-brand" href="">
						<img class="light-mode-item navbar-brand-item h-30px" src="{{ asset('assets/images/logo-mobile.svg') }}" alt="">
						<img class="dark-mode-item navbar-brand-item h-30px" src="{{ asset('assets/images/logo-mobile-light.svg') }}" alt="">
					</a>
				</div>
				<div class="navbar-expand-xl sidebar-offcanvas-menu">
					<button class="navbar-toggler me-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar" aria-expanded="false" aria-label="Toggle navigation" data-bs-auto-close="outside">
						<i class="bi bi-text-right fa-fw h2 lh-0 mb-0 rtl-flip"></i>
					</button>
				</div>
			</div>
		</div>
	</nav>
	<!-- Top bar END -->

	<!-- Page main content START -->
	<div class="page-content-wrapper border">
		<!-- Title -->
		<div class="row">
			<div class="col-12 mb-3">
				<h1 class="h3 mb-2 mb-sm-0">Course Approval Management</h1>
			</div>
		</div>

		<!-- Breadcrumb -->
		<div class="row mb-3">
			<div class="col-12">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb bg-light p-3 rounded">
					<li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin Dashboard</a></li>
						<li class="breadcrumb-item active" aria-current="page">Course Approvals</li>
					</ol>
				</nav>
			</div>
		</div>

		<!-- Status Filter Buttons -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="btn-group flexwrap" role="group">
					<a href="{{ path('admin_course_approvals', {'status': 'pending'}) }}" 
					   class="btn {% if currentStatus == 'pending' %}btn-warning{% else %}btn-outline-warning{% endif %}">
						Pending <span class="badge bg-{% if currentStatus == 'pending' %}white text-warning{% else %}warning text-dark{% endif %}">{{ pendingCount }}</span>
					</a>
					<a href="{{ path('admin_course_approvals', {'status': 'approved'}) }}" 
					   class="btn {% if currentStatus == 'approved' %}btn-success{% else %}btn-outline-success{% endif %}">
						Approved <span class="badge bg-{% if currentStatus == 'approved' %}white text-success{% else %}success{% endif %}">{{ approvedCount }}</span>
					</a>
					<a href="{{ path('admin_course_approvals', {'status': 'refused'}) }}" 
					   class="btn {% if currentStatus == 'refused' %}btn-danger{% else %}btn-outline-danger{% endif %}">
						Refused <span class="badge bg-{% if currentStatus == 'refused' %}white text-danger{% else %}danger{% endif %}">{{ refusedCount }}</span>
					</a>
				</div>
			</div>
		</div>

		<!-- Courses Table -->
		<div class="row">
			<div class="col-12">
				{% if courses %}
					<div class="table-responsive">
						<table class="table table-hover align-middle">
							<thead class="table-light">
								<tr>
									<th>Title</th>
									<th>Creator</th>
									<th>Created at</th>
									<th>Chapters</th>
									<th>Category</th>
									<th>Status</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for cours in courses %}
									<tr>
										<td><strong>{{ cours.title }}</strong></td>
										<td>{{ cours.creator.username }}</td>
										<td>{{ cours.createdAt|date('Y-m-d H:i') }}</td>
										<td>
											<span class="badge bg-info">{{ cours.chapitres|length }}</span>
										</td>
										<td>{{ cours.category ?? 'N/A' }}</td>
										<td>
											{% if cours.isApproved() %}
												<span class="badge bg-success">Approved</span>
											{% elseif cours.isPending() %}
												<span class="badge bg-warning text-dark">Pending</span>
											{% else %}
												<span class="badge bg-danger">Refused</span>
											{% endif %}
										</td>
										<td>
											<a href="{{ path('admin_course_show', {id: cours.id}) }}" class="btn btn-sm btn-info">
												<i class="fas fa-eye"></i> View Details
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<div class="alert alert-info">
						<i class="fas fa-info-circle"></i> 
						{% if currentStatus == 'pending' %}
							No courses pending approval.
						{% elseif currentStatus == 'approved' %}
							No approved courses.
						{% else %}
							No refused courses.
						{% endif %}
					</div>
				{% endif %}

				<!-- Back Button -->
				<div class="mt-4">
					<a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
						<i class="fas fa-arrow-left"></i> Back to Dashboard
					</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Page main content END -->
</div>
<!-- Page content END -->
{% endblock %}
