{% extends 'base.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier' : 'Ajouter' }} un Cours - Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>{{ isEdit ? 'Modifier le Cours' : 'Ajouter un Nouveau Cours' }}</h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('admin_cours_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="POST" class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Titre du Cours</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{ cours.title ?? '' }}" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="5">{{ cours.description ?? '' }}</textarea>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Catégorie</label>
                    <input type="text" class="form-control" id="category" name="category" value="{{ cours.category ?? '' }}">
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Statut</label>
                    <select class="form-select" id="status" name="status">
                        <option value="PENDING" {% if cours.status == 'PENDING' %}selected{% endif %}>En attente</option>
                        <option value="APPROVED" {% if cours.status == 'APPROVED' %}selected{% endif %}>Approuvé</option>
                        <option value="REFUSED" {% if cours.status == 'REFUSED' %}selected{% endif %}>Refusé</option>
                    </select>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> {{ isEdit ? 'Mettre à jour' : 'Créer' }}
                    </button>
                    <a href="{{ path('admin_cours_index') }}" class="btn btn-light">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
