{% extends 'base.html.twig' %}

{% block title %}Admin - Instructor List{% endblock %}

{% block stylesheets %}
<style>
    @media print {
        .navbar, .sidebar, .top-bar, .card-header, .btn, .back-top {
            display: none !important;
        }
        .page-content {
            margin-left: 0 !important;
            padding: 0 !important;
        }
        .table {
            width: 100% !important;
        }
    }
</style>
{% endblock %}

{% block body %}
<!-- **************** MAIN CONTENT START **************** -->
<main>
	
<!-- Sidebar START -->
<nav class="navbar sidebar navbar-expand-xl navbar-dark bg-dark">
	<div class="d-flex align-items-center">
		<a class="navbar-brand" href="{{ path("app_home") }}">
			<img class="navbar-brand-item" src="/assets/images/logo-light.svg" alt="">
		</a>
	</div>
	
	<div class="offcanvas offcanvas-start flex-row custom-scrollbar h-100" data-bs-backdrop="true" tabindex="-1" id="offcanvasSidebar">
		<div class="offcanvas-body sidebar-content d-flex flex-column bg-dark">
			<ul class="navbar-nav flex-column" id="navbar-sidebar">
				<li class="nav-item"><a href="{{ path('admin_dashboard') }}" class="nav-link"><i class="bi bi-house fa-fw me-2"></i>Dashboard</a></li>
				<li class="nav-item ms-2 my-2">Pages</li>
				<li class="nav-item"> <a class="nav-link active" href="{{ path('admin_instructors') }}"><i class="fas fa-user-tie fa-fw me-2"></i>Instructors</a></li>
				<li class="nav-item"> <a class="nav-link" href="{{ path('admin_students') }}"><i class="fas fa-user-graduate fa-fw me-2"></i>Students</a></li>
				<li class="nav-item">
					<a class="nav-link" data-bs-toggle="collapse" href="#collapseRequests" role="button" aria-expanded="false" aria-controls="collapseRequests">
						<i class="fas fa-user-check fa-fw me-2"></i>Requests
					</a>
					<ul class="nav collapse flex-column" id="collapseRequests" data-bs-parent="#navbar-sidebar">
						<li class="nav-item"> <a class="nav-link" href="{{ path('admin_instructor_requests') }}">Instructor requests</a></li>
						<li class="nav-item"> <a class="nav-link" href="{{ path('admin_student_requests') }}">Student requests</a></li>
					</ul>
				</li>
				<li class="nav-item text-danger bg-danger-soft-hover"> <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt fa-fw me-2"></i>Sign Out</a></li>
			</ul>
		</div>
	</div>
</nav>

<div class="page-content">
	<nav class="navbar top-bar navbar-light border-bottom py-0 py-xl-3">
		<div class="container-fluid p-0">
			<div class="d-flex align-items-center w-100">
				<div class="navbar-expand-xl sidebar-offcanvas-menu">
					<button class="navbar-toggler me-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
						<i class="bi bi-text-right fa-fw h2 lh-0 mb-0"></i>
					</button>
				</div>
                <h4 class="mb-0 ms-2">Instructor Management</h4>
			</div>
		</div>
	</nav>

	<div class="page-content-wrapper border">
		<div class="row g-3 align-items-center justify-content-between mb-3">
			<div class="col-md-8">
				<h1 class="h3 mb-2 mb-sm-0">Instructors</h1>
			</div>
			<div class="col-md-4 text-end">
                <a href="{{ path('admin_user_add', {role: 'instructor'}) }}" class="btn btn-primary mb-0"><i class="bi bi-plus-lg me-2"></i>Add Instructor</a>
			</div>
		</div>
			
		<div class="card bg-transparent">
			<div class="card-header bg-transparent border-bottom px-0">
				<div class="row g-3 align-items-center justify-content-between">
					<div class="col-md-8">
						<form class="rounded position-relative" method="get" action="{{ path('admin_instructors') }}">
							<input class="form-control bg-transparent" type="search" name="q" value="{{ search }}" placeholder="Search by name or email" aria-label="Search">
							<button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
								<i class="fas fa-search fs-6 "></i>
							</button>
						</form>
					</div>
				<div class="col-md-3 text-end">
                    <a href="{{ path('admin_instructors_export') }}" class="btn btn-primary-soft mb-0"><i class="bi bi-file-earmark-pdf me-2"></i>Export to PDF</a>
				</div>
				</div>
			</div>

			<div class="card-body px-0">
				<div class="table-responsive border-0">
					<table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
						<thead>
							<tr>
								<th scope="col" class="border-0 rounded-start">
                                    <a href="{{ path('admin_instructors', app.request.query.all|merge({'sort': 'fullName', 'direction': sort == 'fullName' and direction == 'asc' ? 'desc' : 'asc'})) }}" class="d-flex align-items-center text-decoration-none {{ sort == 'fullName' ? 'text-primary fw-bold' : 'text-body' }}">
                                        Instructor name 
                                        <span class="ms-2">
                                            {% if sort == 'fullName' %}
                                                <i class="bi bi-sort-{{ direction == 'asc' ? 'alpha-down' : 'alpha-up' }} fs-6"></i>
                                            {% else %}
                                                <i class="bi bi-arrow-down-up text-muted opacity-50"></i>
                                            {% endif %}
                                        </span>
                                    </a>
                                </th>
								<th scope="col" class="border-0">
                                    <a href="{{ path('admin_instructors', app.request.query.all|merge({'sort': 'email', 'direction': sort == 'email' and direction == 'asc' ? 'desc' : 'asc'})) }}" class="d-flex align-items-center text-decoration-none {{ sort == 'email' ? 'text-primary fw-bold' : 'text-body' }}">
                                        Email
                                        <span class="ms-2">
                                            {% if sort == 'email' %}
                                                <i class="bi bi-sort-{{ direction == 'asc' ? 'alpha-down' : 'alpha-up' }} fs-6"></i>
                                            {% else %}
                                                <i class="bi bi-arrow-down-up text-muted opacity-50"></i>
                                            {% endif %}
                                        </span>
                                    </a>
                                </th>
								<th scope="col" class="border-0">Status</th>
								<th scope="col" class="border-0 rounded-end">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for instructor in pagination.items %}
							<tr>
								<td>
									<div class="d-flex align-items-center position-relative">
										<div class="mb-0 ms-2">
											<h6 class="mb-0">{{ instructor.fullName }}</h6>
											<span class="text-body small">{{ instructor.email }}</span>
										</div>
									</div>
								</td>
								<td>{{ instructor.role }}</td>
								<td>
									{% if instructor.isBlocked %}
										<span class="badge bg-danger">Blocked</span>
									{% else %}
										<span class="badge bg-success">Active</span>
									{% endif %}
								</td>
								<td>
									<a href="{{ path('admin_user_edit', {'id': instructor.id}) }}" class="btn btn-sm btn-info-soft me-1 mb-1">Edit</a>
									<a href="{{ path('admin_user_toggle_block', {'id': instructor.id}) }}" class="btn btn-sm {{ instructor.isBlocked ? 'btn-success-soft' : 'btn-danger-soft' }} me-1 mb-1">
										{{ instructor.isBlocked ? 'Unblock' : 'Block' }}
									</a>
									<a href="{{ path('admin_user_delete', {'id': instructor.id}) }}" class="btn btn-sm btn-danger mb-1" onclick="return confirm('Are you sure?')">Delete</a>
								</td>
							</tr>
                            {% else %}
                            <tr><td colspan="4" class="text-center">No instructors found.</td></tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
            
            {% include '_pagination.html.twig' with {'pages': pagination.pages, 'current_page': pagination.current_page} %}
		</div>
	</div>
</div>
</main>
{% endblock %}
