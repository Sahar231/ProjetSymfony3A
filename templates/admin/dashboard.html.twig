{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Eduport - Admin Dashboard</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="author" content="Webestica.com">
	<meta name="description" content="Eduport - Admin Dashboard">
	<link rel="shortcut icon" href="/assets/images/favicon.ico">
	<link rel="preconnect" href="https://fonts.googleapis.com/">
	<link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;700&family=Roboto:wght@400;500;700&display=swap">
	<link rel="stylesheet" type="text/css" href="/assets/vendor/font-awesome/css/all.min.css">
	<link rel="stylesheet" type="text/css" href="/assets/vendor/bootstrap-icons/bootstrap-icons.css">
	<link rel="stylesheet" type="text/css" href="/assets/vendor/choices/css/choices.min.css">
	<link rel="stylesheet" type="text/css" href="/assets/css/style.css">
</head>
<body>

<header class="navbar-light navbar-sticky">
	<nav class="navbar navbar-expand-xl">
		<div class="container">
			<a class="navbar-brand" href="{{ path("app_home") }}">
				<img class="light-mode-item navbar-brand-item" src="/assets/images/logo.svg" alt="logo">
				<img class="dark-mode-item navbar-brand-item" src="/assets/images/logo-light.svg" alt="logo">
			</a>
			<button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
				<span class="navbar-toggler-animation"><span></span><span></span><span></span></span>
			</button>
			<div class="navbar-collapse w-100 collapse" id="navbarCollapse">
				<ul class="navbar-nav navbar-nav-scroll mx-auto">
					<li class="nav-item"><a class="nav-link" href="{{ path("app_home") }}">Home</a></li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="adminMenu" data-bs-toggle="dropdown">Admin Panel</a>
						<ul class="dropdown-menu" aria-labelledby="adminMenu">
							<li><a class="dropdown-item" href="{{ path('admin_dashboard') }}"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
							<li><a class="dropdown-item" href="{{ path('admin_formation_list') }}"><i class="bi bi-book me-2"></i>All Formations</a></li>
						</ul>
					</li>
				</ul>
			</div>
			<div class="dropdown ms-1 ms-lg-0">
				<a class="avatar avatar-sm p-0" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
					<img class="avatar-img rounded-circle" src="/assets/images/avatar/01.jpg" alt="avatar">
				</a>
				<ul class="dropdown-menu dropdown-animation dropdown-menu-end shadow pt-3" aria-labelledby="profileDropdown">
					<li class="px-3 mb-3">
						<div class="d-flex align-items-center">
							<div class="avatar me-3">
								<img class="avatar-img rounded-circle shadow" src="/assets/images/avatar/01.jpg" alt="avatar">
							</div>
							<div>
								<a class="h6" href="#">Admin</a>
								<p class="small m-0">admin@example.com</p>
							</div>
						</div>
					</li>
					<li><hr class="dropdown-divider"></li>
					<li><a class="dropdown-item" href="#"><i class="bi bi-person fa-fw me-2"></i>Edit Profile</a></li>
					<li><a class="dropdown-item" href="#"><i class="bi bi-gear fa-fw me-2"></i>Settings</a></li>
					<li><hr class="dropdown-divider"></li>
					<li><a class="dropdown-item bg-danger-soft-hover" href="#"><i class="bi bi-power fa-fw me-2"></i>Sign Out</a></li>
				</ul>
			</div>
		</div>
	</nav>
</header>

<main>
<section class="bg-dark align-items-center d-flex" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-white">Admin Dashboard</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
						<li class="breadcrumb-item"><a href="{{ path("app_home") }}">Home</a></li>
						<li class="breadcrumb-item active">Dashboard</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="row g-4">
			<!-- Sidebar START -->
			<div class="col-lg-3">
				<div class="card card-body shadow">
					<h6 class="mb-3"><i class="bi bi-bookmark-plus me-2"></i>Quick Actions</h6>
					<ul class="list-unstyled">
						<li class="mb-2">
							<a href="{{ path('admin_formation_list') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
								<i class="bi bi-list me-2"></i>All Formations
							</a>
						</li>
						<li class="mb-0">
							<a href="{{ path('admin_formation_create') }}" class="btn btn-sm btn-outline-success w-100 text-start">
								<i class="bi bi-plus-circle me-2"></i>Create Formation
							</a>
						</li>
					</ul>

					<hr class="my-3">

					<h6 class="mb-3"><i class="bi bi-check-circle me-2"></i>Formations Approval</h6>
					<ul class="list-unstyled">
						<li class="mb-2">
							<a href="{{ path('admin_formations_approval', {status: 'pending'}) }}" class="btn btn-sm btn-outline-warning w-100 text-start">
								<i class="bi bi-hourglass-split me-2"></i>Pending
								<span class="badge bg-warning float-end">{{ pendingCount }}</span>
							</a>
						</li>
						<li class="mb-2">
							<a href="{{ path('admin_formations_approval', {status: 'approved'}) }}" class="btn btn-sm btn-outline-success w-100 text-start">
								<i class="bi bi-check-circle me-2"></i>Approved
								<span class="badge bg-success float-end">{{ approvedCount }}</span>
							</a>
						</li>
						<li class="mb-0">
							<a href="{{ path('admin_formations_approval', {status: 'archived'}) }}" class="btn btn-sm btn-outline-secondary w-100 text-start">
								<i class="bi bi-archive me-2"></i>Archived
								<span class="badge bg-secondary float-end">{{ archivedCount }}</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
			<!-- Sidebar END -->

			<!-- Content START -->
			<div class="col-lg-9">
				<!-- Stats Cards -->
				<div class="row g-4 mb-4">
					<div class="col-md-4">
						<div class="card card-body shadow text-center">
							<h1 class="text-warning mb-0">{{ pendingCount }}</h1>
							<p class="text-muted mb-0"><i class="bi bi-hourglass-split me-1"></i>Pending Approvals</p>
						</div>
					</div>
					<div class="col-md-4">
						<div class="card card-body shadow text-center">
							<h1 class="text-success mb-0">{{ approvedCount }}</h1>
							<p class="text-muted mb-0"><i class="bi bi-check-circle me-1"></i>Approved Formations</p>
						</div>
					</div>
					<div class="col-md-4">
						<div class="card card-body shadow text-center">
							<h1 class="text-secondary mb-0">{{ archivedCount }}</h1>
							<p class="text-muted mb-0"><i class="bi bi-archive me-1"></i>Archived</p>
						</div>
					</div>
				</div>

				<!-- Pending Formations Section -->
				<div class="card shadow mb-4">
					<div class="card-header bg-warning bg-opacity-10">
						<h5 class="mb-0"><i class="bi bi-hourglass-split me-2"></i>Pending Approvals</h5>
					</div>
					<div class="card-body">
						{% if pendingFormations|length > 0 %}
							<div class="table-responsive">
								<table class="table table-hover mb-0">
									<thead class="table-light">
										<tr>
											<th>Title</th>
											<th>Creator</th>
											<th>Created</th>
											<th>Quizzes</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										{% for formation in pendingFormations %}
											<tr>
												<td>{{ formation.title }}</td>
												<td>{% if formation.creator is not null %}{{ formation.creator.fullName }}{% else %}Unknown{% endif %}</td>
												<td>{{ formation.createdAt|date('d/m/Y') }}</td>
												<td><span class="badge bg-info">{{ formation.quizzes.count }}</span></td>
												<td>
													<a href="{{ path('admin_formation_show', {id: formation.id}) }}" class="btn btn-sm btn-primary">
														<i class="bi bi-eye me-1"></i>Review
													</a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						{% else %}
							<div class="alert alert-info mb-0">
								<i class="bi bi-info-circle me-2"></i>No pending formations awaiting approval
							</div>
						{% endif %}
					</div>
				</div>

				<!-- Recent Approved Formations -->
				<div class="card shadow">
					<div class="card-header bg-success bg-opacity-10">
						<h5 class="mb-0"><i class="bi bi-check-circle me-2"></i>Recent Approved Formations</h5>
					</div>
					<div class="card-body">
						{% if approvedFormations|length > 0 %}
							<div class="table-responsive">
								<table class="table table-hover mb-0">
									<thead class="table-light">
										<tr>
											<th>Title</th>
											<th>Creator</th>
											<th>Created</th>
											<th>Quizzes</th>
										</tr>
									</thead>
									<tbody>
										{% for formation in approvedFormations|slice(0, 5) %}
											<tr>
												<td>{{ formation.title }}</td>
												<td>{% if formation.creator is not null %}{{ formation.creator.fullName }}{% else %}System Admin{% endif %}</td>
												<td>{{ formation.createdAt|date('d/m/Y') }}</td>
												<td><span class="badge bg-info">{{ formation.quizzes.count }}</span></td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						{% else %}
							<div class="alert alert-info mb-0">
								<i class="bi bi-info-circle me-2"></i>No approved formations yet
							</div>
						{% endif %}
					</div>
				</div>
			</div>
			<!-- Content END -->
		</div>
	</div>
</section>
</main>

<footer class="pt-5 bg-light">
	<div class="container">
		<div class="row g-4">
			<div class="col-lg-3">
				<a class="me-0" href="{{ path("app_home") }}">
					<img class="light-mode-item h-40px" src="/assets/images/logo.svg" alt="logo">
					<img class="dark-mode-item h-40px" src="/assets/images/logo-light.svg" alt="logo">
				</a>
				<p class="my-3">Continue your learning journey with us.</p>
			</div>
		</div>
		<hr class="mt-4 mb-0">
		<div class="py-3">
			<div class="text-center">
				<div class="text-body">Copyrights Â©2023 Eduport. Build by <a href="https://www.webestica.com/" target="_blank">Webestica</a></div>
			</div>
		</div>
	</div>
</footer>

<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

<script src="/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/vendor/choices/js/choices.min.js"></script>
<script src="/assets/js/functions.js"></script>

</body>
</html>
{% endblock %}
