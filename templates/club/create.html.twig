{% extends 'base.html.twig' %}

{% block title %}Create Club{% endblock %}

{% block body %}
<main>
<section class="bg-dark align-items-center d-flex" style="background: url({{ asset('assets/images/pattern/04.png') }}) no-repeat center center; background-size: cover;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-white">Create a New Club</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
						<li class="breadcrumb-item"><a href="{{ path("app_home") }}">Home</a></li>
						<li class="breadcrumb-item"><a href="{{ path("club_list") }}">Clubs</a></li>
						<li class="breadcrumb-item active">Create</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 mx-auto">
				<div class="card shadow">
					<div class="card-body p-5">
						<h3 class="mb-4"><i class="fas fa-plus-circle me-2"></i>Create a New Club</h3>

						<p class="text-muted mb-4">
							Create a club for your group, interests, or activities. Your club will be pending approval from administrators.
						</p>

						<form method="POST" class="row g-3">
							<div class="col-12">
								<label for="name" class="form-label">Club Name <span class="text-danger">*</span></label>
								<input type="text" class="form-control" id="name" name="name" required placeholder="Enter your club name">
								<small class="form-text text-muted">Minimum 3 characters</small>
							</div>

							<div class="col-12">
								<label for="description" class="form-label">Description <span class="text-danger">*</span></label>
								<textarea class="form-control" id="description" name="description" rows="5" required placeholder="Describe your club, its goals, and what members can expect..."></textarea>
								<small class="form-text text-muted">Give a detailed description of your club</small>
							</div>

							<div class="col-12">
								<div class="alert alert-info">
									<i class="fas fa-info-circle me-2"></i>
									<strong>Note:</strong> Your club will be in a <strong>pending status</strong> until approved by an administrator.
								</div>
							</div>

							<div class="col-12">
								<div class="d-grid gap-2 d-sm-flex">
									<button type="submit" class="btn btn-primary btn-lg">
										<i class="fas fa-check me-2"></i>Create Club
									</button>
									<a href="{{ path('club_list') }}" class="btn btn-secondary btn-lg">
										<i class="fas fa-times me-2"></i>Cancel
									</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
</main>
{% endblock %}
