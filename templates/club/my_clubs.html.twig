{% extends 'base.html.twig' %}

{% block title %}Mes Clubs - Eduport{% endblock %}

{% block body %}
<main>
    <section class="pt-4">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12 d-sm-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-2 mb-sm-0">Gérer vos clubs</h1>
                    <a href="{{ path('club_create') }}" class="btn btn-primary-soft mb-0"><i class="fas fa-plus me-2"></i>Créer un nouveau club</a>
                </div>
            </div>

            <!-- Barre de recherche et filtres -->
            <div class="row g-3 align-items-center justify-content-between mb-4">
                <div class="col-md-8">
                    <form class="rounded position-relative" method="get" action="{{ path('club_list') }}">
                        <input class="form-control pe-5 bg-transparent" type="search" name="search" placeholder="Rechercher un club..." aria-label="Search">
                        <button class="btn bg-transparent px-2 py-0 position-absolute top-50 end-0 translate-middle-y" type="submit"><i class="fas fa-search fs-6 text-primary"></i></button>
                    </form>
                </div>
            </div>

            <!-- Liste des clubs sous forme de cartes -->
            <div class="row g-4">
                {% for club in clubs %}
                <div class="col-md-6 col-xl-4">
                    <div class="card shadow h-100">
                        <div class="position-relative">
                            <img src="{{ asset('assets/images/courses/4by3/01.jpg') }}" class="card-img-top" alt="club image">
                            <div class="card-img-overlay">
                                {% if club.status == 'APPROVED' %}
                                    <div class="badge bg-success text-white">APPROUVÉ</div>
                                {% elseif club.status == 'PENDING' %}
                                    <div class="badge bg-orange text-white">EN ATTENTE</div>
                                {% else %}
                                    <div class="badge bg-danger text-white">REFUSÉ</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><a href="{{ path('club_detail', {id: club.id}) }}">{{ club.name }}</a></h5>
                            <p class="mb-2"><i class="fas fa-users me-2"></i>{{ club.members|length }} Membres</p>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <a href="{{ path('club_detail', {id: club.id}) }}" class="btn btn-sm btn-primary mb-0">Événements</a>
                                <a href="{{ path('club_edit', {id: club.id}) }}" class="btn btn-sm btn-light mb-0"><i class="fas fa-cog"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-12 text-center">
                    <p>Vous n'avez pas encore de club. <a href="{{ path('club_create') }}">Commencez par en créer un !</a></p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>
{% endblock %}
