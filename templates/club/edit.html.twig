{% extends 'base.html.twig' %}

{% block title %}Edit Club{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0">Edit Club: {{ club.name }}</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.name, 'Club Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="alert alert-info">
                                Note: Editing a club might require re-approval by an administrator.
                            </div>
                            <button type="submit" class="btn btn-warning">Update Club</button>
                            <a href="{{ path('club_my_clubs') }}" class="btn btn-secondary">Cancel</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
