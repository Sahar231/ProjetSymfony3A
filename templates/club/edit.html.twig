{% extends 'base.html.twig' %}

{% block title %}Edit {{ club.name }}{% endblock %}

{% block body %}
<main>
<section class="bg-dark align-items-center d-flex" style="background: url({{ asset('assets/images/pattern/04.png') }}) no-repeat center center; background-size: cover;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-white">Edit Club</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
						<li class="breadcrumb-item"><a href="{{ path("app_home") }}">Home</a></li>
						<li class="breadcrumb-item"><a href="{{ path("club_list") }}">Clubs</a></li>
						<li class="breadcrumb-item"><a href="{{ path("club_detail", {"id": club.id}) }}">{{ club.name }}</a></li>
						<li class="breadcrumb-item active">Edit</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 mx-auto">
				<div class="card shadow">
					<div class="card-body p-5">
						<h3 class="mb-4"><i class="fas fa-edit me-2"></i>Edit Club</h3>

						<form method="POST" class="row g-3">
							<div class="col-12">
								<label for="name" class="form-label">Club Name <span class="text-danger">*</span></label>
								<input type="text" class="form-control" id="name" name="name" value="{{ club.name }}" required placeholder="Enter club name">
								<small class="form-text text-muted">Minimum 3 characters</small>
							</div>

							<div class="col-12">
								<label for="description" class="form-label">Description <span class="text-danger">*</span></label>
								<textarea class="form-control" id="description" name="description" rows="5" required placeholder="Describe your club...">{{ club.description }}</textarea>
								<small class="form-text text-muted">Provide a detailed description</small>
							</div>

							<div class="col-12">
								<label class="form-label">Status</label>
								<div class="alert alert-info">
									<strong>Current Status:</strong>
									{% if club.status == 'PENDING' %}
										<span class="badge bg-warning">Pending Approval</span>
									{% elseif club.status == 'APPROVED' %}
										<span class="badge bg-success">Approved</span>
									{% elseif club.status == 'REJECTED' %}
										<span class="badge bg-danger">Rejected</span>
									{% endif %}
									<br>
									<small class="text-muted">Status is managed by administrators</small>
								</div>
							</div>

							<div class="col-12">
								<div class="d-grid gap-2 d-sm-flex">
									<button type="submit" class="btn btn-primary btn-lg">
										<i class="fas fa-save me-2"></i>Save Changes
									</button>
									<a href="{{ path('club_detail', {'id': club.id}) }}" class="btn btn-secondary btn-lg">
										<i class="fas fa-times me-2"></i>Cancel
									</a>
								</div>
							</div>
						</form>
					</div>
				</div>

				<!-- Delete Section -->
				<div class="card shadow mt-4 border-danger">
					<div class="card-body p-5">
						<h5 class="card-title text-danger mb-3"><i class="fas fa-exclamation-triangle me-2"></i>Danger Zone</h5>
						<p class="text-muted">Deleting your club is permanent and cannot be undone.</p>
						<form method="POST" action="{{ path('club_delete', {'id': club.id}) }}" onsubmit="return confirm('Are you sure you want to delete this club? This action cannot be undone.')">
							<button type="submit" class="btn btn-danger">
								<i class="fas fa-trash me-2"></i>Delete This Club
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
</main>
{% endblock %}
