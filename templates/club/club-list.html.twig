{% extends 'base.html.twig' %}

{% block title %}Community Clubs{% endblock %}

{% block body %}
<section class="bg-dark align-items-center d-flex" style="background:url(assets/images/pattern/04.png) no-repeat center center; background-size:cover;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="text-white">Community Clubs</h1>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
						<li class="breadcrumb-item"><a href="{{ path("app_home") }}">Home</a></li>
						<li class="breadcrumb-item active">Clubs</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</section>

<section class="pb-0 py-sm-5">
	<div class="container">
		<div class="row g-3 align-items-center mb-4">
			<div class="col-md-4">
				<h4 class="mb-0">All Clubs</h4>
			</div>
			<div class="col-md-8 text-md-end">
                <form action="{{ path('club_list') }}" method="get" class="d-inline-block me-2">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control form-control-sm" placeholder="Search clubs..." value="{{ search }}">
                        <select name="sort" class="form-select form-select-sm">
                            <option value="">Sort By</option>
                            <option value="name_asc" {% if sort == 'name_asc' %}selected{% endif %}>Name (A-Z)</option>
                            <option value="name_desc" {% if sort == 'name_desc' %}selected{% endif %}>Name (Z-A)</option>
                            <option value="newest" {% if sort == 'newest' %}selected{% endif %}>Newest</option>
                        </select>
                        <button class="btn btn-sm btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
                <a href="{{ path('club_pdf') }}" class="btn btn-sm btn-outline-danger me-2"><i class="fas fa-file-pdf"></i> PDF</a>

                {% if app.user %}
				    <a href="{{ path('club_create') }}" class="btn btn-sm btn-primary">Create Club</a>
                    <a href="{{ path('club_my_clubs') }}" class="btn btn-sm btn-outline-primary">My Dashboard</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('club_admin_pending') }}" class="btn btn-sm btn-danger">Admin</a>
                {% endif %}
			</div>
		</div>

		<div class="row">
			<div class="col-xl-9 col-xxl-8">
                {% if clubs is empty %}
                    <div class="alert alert-info">No approved clubs found.</div>
                {% else %}
                    <div class="row g-4">
                        {% for club in clubs %}
                            <div class="col-md-6 col-lg-12">
                                <div class="card shadow p-3 mb-3">
                                    <div class="row g-3">
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title"><a href="{{ path('club_detail', {'id': club.id}) }}">{{ club.name }}</a></h5>
                                                <p class="card-text text-truncate">{{ club.description }}</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted"><i class="fas fa-users me-1"></i> {{ club.members|length }} Members</small>
                                                    <a href="{{ path('club_detail', {'id': club.id}) }}" class="btn btn-sm btn-outline-primary">View Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
			</div>

            <!-- Sidebar -->
			<div class="col-lg-3 col-xxl-4">
				<div class="card card-body shadow p-4 mb-4">
					<h4 class="mb-4">Quick Links</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="{{ path('club_list') }}">All Clubs</a></li>
                        {% if app.user %}
                            <li class="list-group-item"><a href="{{ path('club_my_clubs') }}">My Clubs</a></li>
                        {% endif %}
                    </ul>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
