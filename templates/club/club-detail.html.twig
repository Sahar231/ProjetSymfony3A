{% extends 'base.html.twig' %}

{% block title %}Club Detail - {{ club.name }}{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('club_list') }}">Clubs</a></li>
                        <li class="breadcrumb-item active">{{ club.name }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Club Info -->
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h2 class="card-title">{{ club.name }}</h2>
                         <div class="mb-3">
                            <span class="badge bg-primary">{{ club.status }}</span>
                            <span class="text-muted ms-2">Created by {{ club.creator.firstName }} {{ club.creator.lastName }} on {{ club.createdAt|date('M d, Y') }}</span>
                        </div>
                        <p class="card-text">{{ club.description }}</p>
                        
                        {# Action Buttons #}
                        <div class="mt-4">
                            {% if app.user %}
                                {% if app.user == club.creator or is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('club_edit', {'id': club.id}) }}" class="btn btn-warning">Edit Club</a>
                                    <a href="{{ path('event_create', {'clubId': club.id}) }}" class="btn btn-primary">Add Event</a>
                                {% endif %}
                                
                                {% if app.user in club.members %}
                                    <button class="btn btn-secondary" disabled>Member</button>
                                {% else %}
                                    <a href="{{ path('club_join', {'id': club.id}) }}" class="btn btn-success">Join Club</a>
                                {% endif %}
                            {% else %}
                                <a href="#" class="btn btn-outline-primary" onclick="alert('Please login to join')">Login to Join</a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Events Section -->
                <h3 class="mb-3">Upcoming Events</h3>
                {% if club.events is empty %}
                    <div class="alert alert-info">No events scheduled yet.</div>
                {% else %}
                    {% for event in club.events %}
                        {% if event.status == 'APPROVED' or (app.user and (app.user == club.creator or is_granted('ROLE_ADMIN'))) %}
                            <div class="card mb-3 shadow-sm border-start border-4 border-info">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">{{ event.name }}</h5>
                                        <small class="text-muted">{{ event.dateTime|date('M d, Y H:i') }}</small>
                                    </div>
                                    <h6 class="card-subtitle mb-2 text-muted">{{ event.location }}</h6>
                                    <p class="card-text">{{ event.description }}</p>
                                    
                                    {% if event.status == 'PENDING' %}
                                        <span class="badge bg-warning text-dark">Pending Approval</span>
                                    {% endif %}

                                    {% if app.user and (app.user == club.creator or is_granted('ROLE_ADMIN')) %}
                                        <div class="mt-2">
                                            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <form method="post" action="{{ path('event_delete', {'id': event.id}) }}" style="display:inline" onsubmit="return confirm('Delete event?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>

            <div class="col-lg-4">
                <div class="card shadow">
                    <div class="card-header">
                        Members ({{ club.members|length }})
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for member in club.members|slice(0, 10) %}
                            <li class="list-group-item">
                                <i class="fas fa-user-circle me-2"></i> {{ member.firstName }} {{ member.lastName }}
                            </li>
                        {% endfor %}
                        {% if club.members|length > 10 %}
                            <li class="list-group-item text-center text-muted">...and more</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
