<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            line-height: 1.6;
        }
        .header {
            background-color: #f8f9fa;
            padding: 20px;
            border-bottom: 3px solid #007bff;
            margin-bottom: 20px;
        }
        .header h1 {
            margin: 0;
            color: #007bff;
            font-size: 28px;
        }
        .section {
            margin-bottom: 25px;
        }
        .section-title {
            background-color: #e9ecef;
            padding: 10px 15px;
            font-weight: bold;
            color: #495057;
            border-left: 4px solid #007bff;
            margin-bottom: 10px;
        }
        .info-grid {
            display: table;
            width: 100%;
            margin-bottom: 15px;
        }
        .info-row {
            display: table-row;
        }
        .info-label {
            display: table-cell;
            font-weight: bold;
            width: 30%;
            padding: 8px 10px;
            border-bottom: 1px solid #dee2e6;
        }
        .info-value {
            display: table-cell;
            padding: 8px 10px;
            border-bottom: 1px solid #dee2e6;
        }
        .badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
        }
        .badge-pending {
            background-color: #ffc107;
            color: #000;
        }
        .badge-approved {
            background-color: #28a745;
            color: #fff;
        }
        .badge-rejected {
            background-color: #dc3545;
            color: #fff;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }
        th {
            background-color: #007bff;
            color: white;
            padding: 10px;
            text-align: left;
            border: 1px solid #dee2e6;
        }
        td {
            padding: 10px;
            border: 1px solid #dee2e6;
        }
        .footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px solid #dee2e6;
            color: #666;
            font-size: 12px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ club.name }}</h1>
        <p style="margin: 5px 0; color: #666;">Club Information Report</p>
    </div>

    <!-- Status Section -->
    <div class="section">
        <div class="section-title">Status</div>
        <div class="info-grid">
            <div class="info-row">
                <div class="info-label">Club Status:</div>
                <div class="info-value">
                    {% if club.status == 'PENDING' %}
                        <span class="badge badge-pending">Pending Approval</span>
                    {% elseif club.status == 'APPROVED' %}
                        <span class="badge badge-approved">Approved</span>
                    {% elseif club.status == 'REJECTED' %}
                        <span class="badge badge-rejected">Rejected</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Description Section -->
    <div class="section">
        <div class="section-title">About</div>
        <p>{{ club.description }}</p>
    </div>

    <!-- Club Details -->
    <div class="section">
        <div class="section-title">Club Details</div>
        <div class="info-grid">
            <div class="info-row">
                <div class="info-label">Creator:</div>
                <div class="info-value">{{ club.creator.firstName }} {{ club.creator.lastName }} ({{ club.creator.email }})</div>
            </div>
            <div class="info-row">
                <div class="info-label">Created Date:</div>
                <div class="info-value">{{ club.createdAt|date('d F Y, H:i') }}</div>
            </div>
            <div class="info-row">
                <div class="info-label">Last Updated:</div>
                <div class="info-value">{{ club.updatedAt|date('d F Y, H:i') }}</div>
            </div>
            <div class="info-row">
                <div class="info-label">Total Members:</div>
                <div class="info-value">{{ club.members|length }}</div>
            </div>
            <div class="info-row">
                <div class="info-label">Total Events:</div>
                <div class="info-value">{{ club.events|length }}</div>
            </div>
        </div>
    </div>

    <!-- Members Section -->
    <div class="section">
        <div class="section-title">Members ({{ club.members|length }})</div>
        {% if club.members|length > 0 %}
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    {% for member in club.members %}
                        <tr>
                            <td>{{ member.firstName }} {{ member.lastName }}</td>
                            <td>{{ member.email }}</td>
                            <td>
                                {% if member.id == club.creator.id %}
                                    Creator
                                {% else %}
                                    Member
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p style="color: #666; font-style: italic;">No members yet</p>
        {% endif %}
    </div>

    <!-- Events Section -->
    <div class="section">
        <div class="section-title">Events ({{ club.events|length }})</div>
        {% if club.events|length > 0 %}
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date & Time</th>
                        <th>Location</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in club.events %}
                        <tr>
                            <td>{{ event.title }}</td>
                            <td>{{ event.eventDate|date('d F Y, H:i') }}</td>
                            <td>{{ event.location }}</td>
                            <td>
                                {% if event.status == 'PENDING' %}
                                    <span class="badge badge-pending">Pending</span>
                                {% elseif event.status == 'APPROVED' %}
                                    <span class="badge badge-approved">Approved</span>
                                {% elseif event.status == 'REJECTED' %}
                                    <span class="badge badge-rejected">Rejected</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p style="color: #666; font-style: italic;">No events yet</p>
        {% endif %}
    </div>

    <div class="footer">
        <p>Generated on {{ "now"|date('d F Y, H:i:s') }}</p>
        <p>This is an automatically generated report from the Club Management System</p>
    </div>
</body>
</html>
