{% extends 'base.html.twig' %}

{% block title %}Admin - Pending Events{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Pending Event Approvals</h2>

        {% if events is empty %}
            <div class="alert alert-success">No pending events to approve.</div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover shadow">
                    <thead class="table-dark">
                        <tr>
                            <th>Event Name</th>
                            <th>Club</th>
                            <th>Date & Time</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.name }}</td>
                                <td>{{ event.club.name }}</td>
                                <td>{{ event.dateTime|date('Y-m-d H:i') }}</td>
                                <td>{{ event.location }}</td>
                                <td>
                                    <form method="post" action="{{ path('event_admin_approve', {'id': event.id}) }}" style="display: inline-block">
                                        <button class="btn btn-sm btn-success">Approve</button>
                                    </form>
                                    <form method="post" action="{{ path('event_delete', {'id': event.id}) }}" style="display: inline-block" onsubmit="return confirm('Reject and Delete this event?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                        <button class="btn btn-sm btn-danger">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
        
        <div class="mt-4">
            <a href="{{ path('club_admin_pending') }}" class="btn btn-outline-secondary">Back to Pending Clubs</a>
        </div>
    </div>
</section>
{% endblock %}
