{% extends 'base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block body %}
{% set search = search | default('') %}
{% set sort = sort | default('date_desc') %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>{{ title | default('Quizzes') }}</h1>
                <div>
                    <a href="{{ path('quiz_new') }}" class="btn btn-primary">Create New Quiz</a>
                    <a href="{{ path('instructor_dashboard') }}" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </div>

            <!-- Search and Sort Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label for="searchInput" class="form-label">Search by Title or Description</label>
                            <input type="text" class="form-control" id="searchInput" name="search" placeholder="Enter title or description..." value="{{ search }}">
                        </div>
                        <div class="col-md-4">
                            <label for="sortSelect" class="form-label">Sort By</label>
                            <select class="form-select" id="sortSelect" name="sort">
                                <option value="date_desc" {% if sort == 'date_desc' %}selected{% endif %}>Newest First</option>
                                <option value="date_asc" {% if sort == 'date_asc' %}selected{% endif %}>Oldest First</option>
                                <option value="a_z" {% if sort == 'a_z' %}selected{% endif %}>A to Z</option>
                                <option value="z_a" {% if sort == 'z_a' %}selected{% endif %}>Z to A</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {% if quizzes is empty %}
                <div class="alert alert-info">No quizzes found</div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Level</th>
                                <th>State</th>
                                <th>Questions</th>
                                <th>Created By</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for quiz in quizzes %}
                                <tr>
                                    <td>{{ quiz.id }}</td>
                                    <td>{{ quiz.title }}</td>
                                    <td>
                                        <span class="badge bg-info">{{ quiz.level }}</span>
                                    </td>
                                    <td>
                                        {% if quiz.state == 'approved' %}
                                            <span class="badge bg-success">{{ quiz.state }}</span>
                                        {% elseif quiz.state == 'pending' %}
                                            <span class="badge bg-warning">{{ quiz.state }}</span>
                                        {% else %}
                                            <span class="badge bg-danger">{{ quiz.state }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ quiz.questions | length }}</td>
                                    <td>{{ quiz.creator.firstname }} {{ quiz.creator.lastname }}</td>
                                    <td>{{ quiz.createdAt | date('Y-m-d H:i') }}</td>
                                    <td>
                                        <a href="{{ path('quiz_show', {id: quiz.id}) }}" class="btn btn-sm btn-info">View</a>
                                        {% if is_granted('ROLE_INSTRUCTOR') and app.user == quiz.creator %}
                                            <a href="{{ path('quiz_edit', {id: quiz.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                            <form method="POST" action="{{ path('quiz_delete', {id: quiz.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        {% endif %}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            {% if quiz.state == 'pending' %}
                                                <form method="POST" action="{{ path('quiz_approve', {id: quiz.id}) }}" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                                </form>
                                                <form method="POST" action="{{ path('quiz_reject', {id: quiz.id}) }}" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                                </form>
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
