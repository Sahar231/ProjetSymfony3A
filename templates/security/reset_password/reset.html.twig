{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
<main>
	<section class="p-0 d-flex align-items-center position-relative overflow-hidden">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100">
					<div class="p-3 p-lg-5 text-center">
						<h2 class="fw-bold">Security First</h2>
						<img src="/assets/images/element/05.svg" class="mt-5" alt="">
					</div>
				</div>
				<div class="col-12 col-lg-6 d-flex justify-content-center align-items-center">
					<div class="row my-5 w-100">
						<div class="col-sm-10 col-xl-8 m-auto">
							<span class="mb-0 fs-1">ðŸ”’</span>
							<h1 class="fs-2">Reset Your Password</h1>
							<p class="mb-4">Enter your new password below to regain access to your account.</p>

                            {{ form_start(resetForm) }}
                                <div class="mb-4">
                                    <label class="form-label">New Password *</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-lock-fill"></i></span>
                                        {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control border-0 bg-light rounded-end ps-1', 'placeholder': 'New Password'}}) }}
                                    </div>
                                    {{ form_errors(resetForm.plainPassword) }}
                                </div>
                                <div class="d-grid">
                                    <button class="btn btn-primary mb-0" type="submit">Reset Password</button>
                                </div>
                            {{ form_end(resetForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>
{% endblock %}
