{% extends 'baseBack.html.twig' %}

{% block title %}{{ cours.title }} - Course Details{% endblock %}

{% block body %}
<!-- Page content START -->
<div class="page-content">
	<!-- Top bar START -->
	<nav class="navbar top-bar navbar-light border-bottom py-0 py-xl-3">
		<div class="container-fluid p-0">
			<div class="d-flex align-items-center w-100">
				<!-- Logo and Toggler -->
				<div class="d-flex align-items-center d-xl-none">
					<a class="navbar-brand" href="">
						<img class="light-mode-item navbar-brand-item h-30px" src="{{ asset('assets/images/logo-mobile.svg') }}" alt="">
						<img class="dark-mode-item navbar-brand-item h-30px" src="{{ asset('assets/images/logo-mobile-light.svg') }}" alt="">
					</a>
				</div>
				<div class="navbar-expand-xl sidebar-offcanvas-menu">
					<button class="navbar-toggler me-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar" aria-expanded="false" aria-label="Toggle navigation" data-bs-auto-close="outside">
						<i class="bi bi-text-right fa-fw h2 lh-0 mb-0 rtl-flip"></i>
					</button>
				</div>
			</div>
		</div>
	</nav>
	<!-- Top bar END -->

	<!-- Page main content START -->
	<div class="page-content-wrapper border">
		<!-- Title -->
		<div class="row">
			<div class="col-12 mb-3">
				<h1 class="h3 mb-2 mb-sm-0">{{ cours.title }}</h1>
			</div>
		</div>

		<!-- Breadcrumb -->
		<div class="row mb-3">
			<div class="col-12">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb bg-light p-3 rounded">
					<li class="breadcrumb-item"><a href="{{ path('instructor_dashboard') }}">Instructor Dashboard</a></li>
						<li class="breadcrumb-item"><a href="{{ path('instructor_course_list') }}">My Courses</a></li>
						<li class="breadcrumb-item active" aria-current="page">{{ cours.title }}</li>
					</ol>
				</nav>
			</div>
		</div>

		<!-- Course Header -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="card shadow-sm mb-4">
					<div class="card-body">
						<div class="d-flex justify-content-between align-items-start mb-3">
							<div>
								<p class="text-muted mb-2">
									<i class="fas fa-user"></i> <strong>Creator:</strong> {{ cours.creator.username }}
								</p>
								<p class="text-muted mb-2">
									<i class="fas fa-calendar"></i> <strong>Created:</strong> {{ cours.createdAt|date('Y-m-d H:i') }}
								</p>
								<p class="text-muted mb-0">
									<i class="fas fa-tag"></i> <strong>Category:</strong> {{ cours.category ?? 'Uncategorized' }}
								</p>
							</div>
							<div class="text-end">
								{% if cours.isApproved() %}
									<span class="badge bg-success fs-6">Approved</span>
								{% elseif cours.isPending() %}
									<span class="badge bg-warning text-dark fs-6">Pending Approval</span>
								{% else %}
									<span class="badge bg-danger fs-6">Refused</span>
								{% endif %}
							</div>
						</div>

						<!-- Course Description -->
						<hr>
						<div class="mb-4">
							<h5 class="fw-bold">Description</h5>
							<p class="text-justify">{{ cours.description }}</p>
						</div>

						<!-- Course Statistics -->
						<div class="row mb-4">
							<div class="col-md-6">
								<div class="alert alert-info mb-0">
									<strong>Chapters:</strong> {{ chapters|length }}
								</div>
							</div>
							<div class="col-md-6">
								<div class="alert alert-info mb-0">
									<strong>Last Updated:</strong> {{ cours.updatedAt|date('Y-m-d H:i') }}
								</div>
							</div>
						</div>

						<!-- Action Buttons (only for owner) -->
						{% if isOwner %}
							<div class="btn-group" role="group">
								<a href="{{ path('instructor_course_edit', {id: cours.id}) }}" class="btn btn-warning">
									<i class="fas fa-edit"></i> Edit Course
								</a>
								<form method="POST" action="{{ path('instructor_course_delete', {id: cours.id}) }}" style="display:inline;">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cours.id) }}">
									<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?');">
										<i class="fas fa-trash"></i> Delete
									</button>
								</form>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>

		<!-- Chapters Section -->
		<div class="row">
			<div class="col-12">
				<h2 class="mb-3">Chapters ({{ chapters|length }})</h2>
				
				{% if chapters %}
					<div class="row">
						{% for chapter in chapters %}
							<div class="col-md-6 mb-4">
								<div class="card h-100">
									<div class="card-header bg-light">
										<h5 class="mb-0">{{ loop.index }}. {{ chapter.title }}</h5>
									</div>
									<div class="card-body">
										<p class="text-muted small mb-2">
											<i class="fas fa-calendar"></i> {{ chapter.createdAt|date('Y-m-d') }}
										</p>
										<p class="card-text">
											{{ chapter.content[:200] }}{% if chapter.content|length > 200 %}...{% endif %}
										</p>
									</div>
									<div class="card-footer bg-white">
										<small class="text-muted">
											<strong>Author:</strong> {{ chapter.creator.username }}
										</small>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% else %}
					<div class="alert alert-info">
						<i class="fas fa-info-circle"></i> No chapters available for this course yet.
					</div>
				{% endif %}

				<!-- Back Button -->
				<div class="mt-4">
					<a href="{{ path('instructor_course_list') }}" class="btn btn-secondary">
						<i class="fas fa-arrow-left"></i> Back to My Courses
					</a>
				</div>
			</div>
		</div>
	</div>
	<!-- Page main content END -->
</div>
<!-- Page content END -->
{% endblock %}
