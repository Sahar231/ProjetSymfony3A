{% extends 'base.html.twig' %}

{% block title %}Event Details - Instructor{% endblock %}

{% block body %}
<main>
<section class="pt-0">
	<div class="container-fluid px-0">
		<div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;">
		</div>
	</div>
	<div class="container mt-n4">
		<div class="row">
			<div class="col-12">
				<div class="card bg-transparent card-body pb-0 px-0 mt-2 mt-sm-0">
					<div class="row d-sm-flex justify-sm-content-between mt-2 mt-md-0">
						<div class="col d-sm-flex justify-content-between align-items-center">
							<div>
								<h1 class="my-1 fs-4">{{ event.title }}</h1>
								<p class="text-muted mb-0">Event Details</p>
							</div>
							<div class="mt-2 mt-sm-0">
								<a href="{{ path('instructor_event_list') }}" class="btn btn-secondary mb-0"><i class="bi bi-arrow-left me-2"></i>Back</a>
							</div>
						</div>
					</div>
				</div>
				<hr class="d-xl-none">
			</div>
		</div>
	</div>
</section>

<section class="pt-0">
	<div class="container">
		<div class="row g-4">
			<div class="col-lg-8">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title mb-3">Event Information</h5>
						
						<div class="row mb-3">
							<div class="col-md-6">
								<h6 class="text-muted mb-2">Title</h6>
								<p>{{ event.title }}</p>
							</div>
							<div class="col-md-6">
								<h6 class="text-muted mb-2">Status</h6>
								<p>
									{% if event.status == 'PENDING' %}
										<span class="badge bg-warning">Pending Approval</span>
									{% elseif event.status == 'APPROVED' %}
										<span class="badge bg-success">Approved</span>
									{% elseif event.status == 'REJECTED' %}
										<span class="badge bg-danger">Rejected</span>
									{% endif %}
								</p>
							</div>
						</div>

						<div class="row mb-3">
							<div class="col-12">
								<h6 class="text-muted mb-2">Description</h6>
								<p>{{ event.description ?? 'No description' }}</p>
							</div>
						</div>

						<div class="row mb-3">
							<div class="col-md-6">
								<h6 class="text-muted mb-2">Date & Time</h6>
								<p>{{ event.eventDate|date('d/m/Y H:i') }}</p>
							</div>
							<div class="col-md-6">
								<h6 class="text-muted mb-2">Location</h6>
								<p>{{ event.location ?? 'Not specified' }}</p>
							</div>
						</div>

						<div class="row mb-3">
							<div class="col-md-6">
								<h6 class="text-muted mb-2">Club</h6>
								<p><a href="#">{{ event.club.name }}</a></p>
							</div>
							<div class="col-md-6">
								<h6 class="text-muted mb-2">Created</h6>
								<p>{{ event.createdAt|date('d/m/Y H:i') }}</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-lg-4">
				<div class="card">
					<div class="card-header bg-light">
						<h5 class="mb-0">Actions</h5>
					</div>
					<div class="card-body">
						<div class="d-grid gap-2">
							<a href="#" class="btn btn-primary">
								<i class="bi bi-pencil me-2"></i>Edit Event
							</a>
							<a href="{{ path('instructor_event_list') }}" class="btn btn-secondary">
								<i class="bi bi-list me-2"></i>Back to Events
							</a>
							<button class="btn btn-danger" onclick="return confirm('Delete this event?')">
								<i class="bi bi-trash me-2"></i>Delete Event
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

</main>
{% endblock %}
