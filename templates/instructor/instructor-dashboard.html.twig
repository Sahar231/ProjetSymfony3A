								<div class="list-group list-group-dark list-group-borderless">
									<a class="list-group-item active" href="{{ path('instructor_dashboard') }}"><i class="bi bi-ui-checks-grid fa-fw me-2"></i>Dashboard</a>
									<a class="list-group-item" href="{{ path('instructor_manage_courses') }}"><i class="bi bi-basket fa-fw me-2"></i>My Courses</a>
									<a class="list-group-item" href="{{ path('instructor_quiz') }}"><i class="bi bi-question-diamond fa-fw me-2"></i>Quiz</a>
									<a class="list-group-item" href="{{ path('instructor_earnings') }}"><i class="bi bi-graph-up fa-fw me-2"></i>Earnings</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xl-9">
					<div class="row g-4">
						<div class="col-sm-6 col-lg-4">
							<div class="d-flex justify-content-center align-items-center p-4 bg-warning bg-opacity-15 rounded-3">
								<span class="display-6 text-warning mb-0"><i class="fas fa-tv fa-fw"></i></span>
								<div class="ms-4">
									<h5 class="purecounter mb-0 fw-bold" data-purecounter-start="0" data-purecounter-end="25" data-purecounter-delay="200">0</h5>
									<span class="mb-0 h6 fw-light">Total Courses</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
