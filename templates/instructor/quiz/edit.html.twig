{% extends 'base.html.twig' %}

{% block title %}Éditer Quiz: {{ quiz.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Éditer: {{ quiz.title }}
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="form-group mb-3">
                        {{ form_label(form.title, 'Titre du Quiz') }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="d-flex gap-2 mb-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Sauvegarder les modifications
                        </button>
                        {% if quiz.status != 'PENDING' and quiz.status != 'APPROVED' %}
                            <a href="{{ path('instructor_quiz_submit', {id: quiz.id}) }}" class="btn btn-outline-success" onclick="return confirm('Soumettre ce quiz pour approbation ?');">
                                <i class="fas fa-upload me-2"></i>Soumettre pour approbation
                            </a>
                        {% elseif quiz.status == 'PENDING' %}
                            <span class="badge bg-warning text-dark">En attente d'approbation</span>
                        {% else %}
                            <span class="badge bg-success">Approuvé</span>
                        {% endif %}
                        <a href="{{ path('instructor_quiz_list') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-question-circle me-2"></i>Questions ({{ questions|length }})
                    </h4>
                </div>
                <div class="card-body">
                    {% if questions|length > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for question in questions %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="flex-grow-1">
                                        <p class="mb-1"><strong>{{ question.text }}</strong></p>
                                        <small class="text-muted">
                                            Réponses: {{ question.reponses|length }} 
                                            {% for reponse in question.reponses %}
                                                {% if reponse.isCorrect %}<span class="badge bg-success ms-1">✓ {{ reponse.content }}</span>{% endif %}
                                            {% endfor %}
                                        </small>
                                    </div>
                                    <div class="ms-2">
                                        <a href="{{ path('instructor_question_edit', {id: question.id}) }}" class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('instructor_question_delete', {id: question.id}) }}" method="POST" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">Aucune question ajoutée.</p>
                    {% endif %}

                    <div class="mt-3">
                        <a href="{{ path('instructor_question_new', {quizId: quiz.id}) }}" class="btn btn-success w-100">
                            <i class="fas fa-plus me-2"></i>Ajouter une question
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
