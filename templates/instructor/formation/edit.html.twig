				</nav>
			</div>
		</div>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="row g-4">
			<!-- Sidebar START -->
			<div class="col-lg-3">
				<div class="card shadow h-100">
					<div class="card-header bg-light border-bottom">
						<h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Links</h5>
					</div>
					<div class="card-body">
						<ul class="list-unstyled">
							<li class="mb-2">
								<a href="{{ path('instructor_formation_create') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
									<i class="bi bi-book me-2"></i>Add Formation
								</a>
							</li>
							<li class="mb-2">
								<a href="{{ path('instructor_quiz_create') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
									<i class="bi bi-question-diamond me-2"></i>Add Quiz
								</a>
							</li>
							<li class="mb-0">
								<a href="{{ path('instructor_club_create') }}" class="btn btn-sm btn-outline-primary w-100 text-start">
									<i class="bi bi-people me-2"></i>Add Club
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<!-- Sidebar END -->

			<!-- Content START -->
			<div class="col-lg-9">
				<div class="card card-body shadow p-5">
					<h2 class="mb-4">Edit Formation</h2>
					{% if formation.isApproved %}
						<div class="alert alert-info" role="alert">
							<i class="bi bi-info-circle me-2"></i>This formation is approved. You can now modify it.
						</div>
					{% else %}
						<div class="alert alert-warning" role="alert">
							<i class="bi bi-exclamation-triangle me-2"></i>This formation has not been approved yet. Wait for admin approval before making modifications.
						</div>
					{% endif %}
					<form method="POST" enctype="multipart/form-data">
						<div class="mb-3">
							<label class="form-label">Formation Title</label>
							<input type="text" class="form-control" name="title" value="{{ formation.title }}" required>
						</div>
						<div class="mb-3">
							<label class="form-label">Description</label>
							<textarea class="form-control" name="description" rows="4" required>{{ formation.description }}</textarea>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">Duration (weeks)</label>
									<input type="number" class="form-control" name="duration" value="{{ formation.duration }}" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">Price</label>
									<input type="number" step="0.01" class="form-control" name="price" value="{{ formation.price }}" required>
								</div>
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label">Support Course File</label>
							{% if formation.supportFile %}
								<p class="small text-muted mb-2">
									<i class="bi bi-file-earmark me-1"></i>Current file: <a href="{{ formation.supportFile }}" target="_blank">Download</a>
								</p>
							{% endif %}
							<input type="file" class="form-control" name="supportFile" accept=".pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.zip,.rar" title="Upload course support materials (PDF, Word, Excel, PowerPoint, etc.)">
							<small class="form-text text-muted">Upload course materials like PDFs, documents, presentations, etc. (Optional)</small>
						</div>
						<div class="d-flex gap-2">
							<button type="submit" class="btn btn-primary" {% if not formation.isApproved %}disabled title="Formation must be approved first"{% endif %}>
								<i class="bi bi-check me-1"></i>Save Changes
							</button>
							<a href="{{ path('instructor_formation_list') }}" class="btn btn-outline-secondary">Cancel</a>
						</div>
					</form>
				</div>
				</div>
			</div>
			<!-- Content END -->
		</div>
	</div>
</section>
