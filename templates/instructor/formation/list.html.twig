		</div>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="d-flex justify-content-between align-items-center mb-4">
					<h2 class="mb-0">Formations I Teach</h2>
				<div class="d-flex gap-2">
					<a href="{{ path("instructor_dashboard") }}" class="btn btn-secondary"><i class="bi bi-arrow-left me-2"></i>Back to Dashboard</a>
					<a href="{{ path("instructor_formation_create") }}" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Create Formation</a>
				</div>
				</div>
			<!-- Search and Sort Section -->
			<div class="card card-body shadow mb-4">
				<form method="GET" class="row g-3 align-items-end">
					<div class="col-md-6">
						<label class="form-label"><i class="bi bi-search me-2"></i>Search Formation</label>
						<input type="text" class="form-control" name="search" placeholder="Search by name or description..." value="{{ search }}">
					</div>
					<div class="col-md-4">
						<label class="form-label"><i class="bi bi-sort-down me-2"></i>Sort By</label>
						<select class="form-select" name="sort" onchange="this.form.submit()">
							<option value="date_desc" {% if sort == 'date_desc' %}selected{% endif %}>Newest First</option>
							<option value="date_asc" {% if sort == 'date_asc' %}selected{% endif %}>Oldest First</option>
							<option value="title_asc" {% if sort == 'title_asc' %}selected{% endif %}>Title (A-Z)</option>
							<option value="title_desc" {% if sort == 'title_desc' %}selected{% endif %}>Title (Z-A)</option>
						</select>
					</div>
					<div class="col-md-2">
						<button type="submit" class="btn btn-primary w-100"><i class="bi bi-search me-1"></i>Search</button>
					</div>
				</form>
			</div>
				<div class="card">
					<div class="table-responsive">
						<table class="table table-hover mb-0">
							<thead class="table-light">
								<tr>
									<th>ID</th>
									<th>Title</th>
									<th>Status</th>
									<th>Support File</th>
									<th>Created</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% if formations|length > 0 %}
									{% for formation in formations %}
										<tr>
											<td>{{ formation.id }}</td>
											<td>{{ formation.title }}</td>
											<td>
												{% if formation.isArchived and not formation.isApproved %}
													<span class="badge bg-danger">Disapproved</span>
												{% elseif formation.isArchived %}
													<span class="badge bg-secondary">Archived</span>
												{% elseif formation.isApproved %}
													<span class="badge bg-success">Approved</span>
												{% else %}
													<span class="badge bg-warning">Pending</span>
												{% endif %}
											</td>
											<td>
												{% if formation.supportFile %}
													<a href="{{ formation.supportFile }}" target="_blank" class="btn btn-sm btn-outline-secondary" title="Download support file">
														<i class="bi bi-download me-1"></i>Download
													</a>
												{% else %}
													<span class="text-muted">-</span>
												{% endif %}
											</td>
											<td>{{ formation.createdAt|date('d/m/Y') }}</td>
											<td>
												{% if formation.isApproved %}
													<a href="{{ path('instructor_formation_edit', {id: formation.id}) }}" class="btn btn-sm btn-info">
														<i class="bi bi-pencil me-1"></i>Edit
													</a>
													<a href="{{ path('instructor_formation_show', {id: formation.id}) }}" class="btn btn-sm btn-primary">
														<i class="bi bi-eye me-1"></i>View
													</a>
												{% else %}
													<span class="btn btn-sm btn-info disabled" title="Formation must be approved first">Edit</span>
													<span class="btn btn-sm btn-primary disabled" title="Formation must be approved first">View</span>
												{% endif %}
												{% if formation.isArchived and not formation.isApproved %}
													<!-- Disapproved formation - cannot be unarchived -->
													<span class="btn btn-sm btn-danger disabled" title="This formation has been disapproved">Disapproved</span>
												{% elseif not formation.isArchived %}
													<form method="POST" action="{{ path('instructor_formation_archive', {id: formation.id}) }}" style="display:inline;">
														<button type="submit" class="btn btn-sm btn-warning" title="Archive this formation">
															<i class="bi bi-archive me-1"></i>Archive
														</button>
													</form>
												{% else %}
													<form method="POST" action="{{ path('instructor_formation_unarchive', {id: formation.id}) }}" style="display:inline;">
														<button type="submit" class="btn btn-sm btn-success" title="Unarchive this formation">
															<i class="bi bi-arrow-counterclockwise me-1"></i>Unarchive
														</button>
													</form>
												{% endif %}
												<a href="#" class="btn btn-sm btn-danger">Delete</a>
											</td>
										</tr>
									{% endfor %}
								{% else %}
									<tr>
										<td colspan="6" class="text-center py-4">
											<p class="text-muted mb-2">No formations yet</p>
											<a href="{{ path("instructor_formation_create") }}" class="btn btn-sm btn-primary">Create your first formation</a>
										</td>
									</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
