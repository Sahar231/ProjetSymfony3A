<script>
let quizCount = 0;
let questionCount = {};

// Auto-fill category when formation title changes
document.getElementById('formationTitle').addEventListener('change', function() {
    const formationTitle = this.value;
    document.querySelectorAll('input[name*="[category]"]').forEach(input => {
        input.value = formationTitle;
    });
});

document.getElementById('addQuizBtn').addEventListener('click', function() {
    const container = document.getElementById('quizzesContainer');
    const formationTitle = document.getElementById('formationTitle').value;
    
    // Clear the placeholder message on first quiz
    if (quizCount === 0) {
        container.innerHTML = '';
    }
    
    const quizId = quizCount++;
    questionCount[quizId] = 0;
    
    const quizHTML = `
        <div class="card mb-3 quiz-card" id="quiz-${quizId}">
            <div class="card-header bg-secondary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Quiz ${quizId + 1}</h6>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeQuiz(${quizId})">
                        <i class="bi bi-trash me-1"></i>Remove
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Quiz Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="quiz[${quizId}][title]" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Quiz Description</label>
                        <input type="text" class="form-control" name="quiz[${quizId}][description]">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Category <span class="text-muted">(Auto-filled)</span></label>
                        <input type="text" class="form-control" name="quiz[${quizId}][category]" value="${formationTitle}" readonly>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Total Score <span class="text-danger">*</span></label>
                        <input type="number" step="0.01" class="form-control quiz-total-score" name="quiz[${quizId}][total_score]" value="100" required>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Pass Score</label>
                        <input type="number" step="0.01" class="form-control" name="quiz[${quizId}][pass_score]" value="60">
                    </div>
                </div>

                <!-- Questions Container -->
                <hr>
                <h6 class="mb-3"><i class="bi bi-question-lg me-2"></i>Questions (QCM)</h6>
                <div class="quiz-score-info alert alert-info" id="quiz-${quizId}-info" style="display:none;">
                    <strong>Score Distribution:</strong> <span id="score-sum-${quizId}">0</span>/<span id="score-total-${quizId}">100</span>
                </div>
                <div class="questions-container" id="questions-${quizId}"></div>
                
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addQuestion(${quizId})">
                    <i class="bi bi-plus-circle me-1"></i>Add Question
                </button>
            </div>
        </div>
    `;
    
    container.innerHTML += quizHTML;
});

function addQuestion(quizId) {
    const questionId = questionCount[quizId]++;
    const container = document.getElementById(`questions-${quizId}`);
    
    const questionHTML = `
        <div class="card mb-3 question-card" id="question-${quizId}-${questionId}">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Question ${questionId + 1}</h6>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeQuestion(${quizId}, ${questionId})">
                        <i class="bi bi-trash me-1"></i>Remove
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Question Text <span class="text-danger">*</span></label>
                    <textarea class="form-control" name="quiz[${quizId}][questions][${questionId}][question]" rows="2" required></textarea>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Number of Options</label>
                    <input type="number" class="form-control" name="optionCount" value="4" min="2" max="10" onchange="updateOptions(${quizId}, ${questionId}, this.value)">
                </div>

                <div class="mb-3" id="options-${quizId}-${questionId}">
                    <label class="form-label">Answer Options</label>
                    <div class="mb-2">
                        <div class="input-group">
                            <input type="text" class="form-control" name="quiz[${quizId}][questions][${questionId}][choice][]" placeholder="Option 1" required>
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="quiz[${quizId}][questions][${questionId}][correct]" value="0" required>
                                <label class="form-check-label ms-2" style="cursor: pointer;">Correct</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="input-group">
                            <input type="text" class="form-control" name="quiz[${quizId}][questions][${questionId}][choice][]" placeholder="Option 2" required>
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="quiz[${quizId}][questions][${questionId}][correct]" value="1">
                                <label class="form-check-label ms-2" style="cursor: pointer;">Correct</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="input-group">
                            <input type="text" class="form-control" name="quiz[${quizId}][questions][${questionId}][choice][]" placeholder="Option 3" required>
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="quiz[${quizId}][questions][${questionId}][correct]" value="2">
                                <label class="form-check-label ms-2" style="cursor: pointer;">Correct</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="input-group">
                            <input type="text" class="form-control" name="quiz[${quizId}][questions][${questionId}][choice][]" placeholder="Option 4" required>
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="radio" name="quiz[${quizId}][questions][${questionId}][correct]" value="3">
                                <label class="form-check-label ms-2" style="cursor: pointer;">Correct</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Question Score <span class="text-danger">*</span></label>
                    <input type="number" step="0.01" class="form-control question-score" name="quiz[${quizId}][questions][${questionId}][score]" value="1" required onchange="updateScoreDistribution(${quizId})">
                </div>
            </div>
        </div>
    `;
    
    container.innerHTML += questionHTML;
    document.getElementById(`quiz-${quizId}-info`).style.display = 'block';
    updateScoreDistribution(quizId);
}

function removeQuiz(quizId) {
    const quizCard = document.getElementById(`quiz-${quizId}`);
    if (quizCard) {
        quizCard.remove();
    }
    // Show placeholder if no quizzes left
    const container = document.getElementById('quizzesContainer');
    if (container.innerHTML.trim() === '') {
        container.innerHTML = '<p class="text-muted">No quizzes added yet. Click "Add Quiz" to create your first quiz.</p>';
    }
}

function removeQuestion(quizId, questionId) {
    const questionCard = document.getElementById(`question-${quizId}-${questionId}`);
    if (questionCard) {
        questionCard.remove();
    }
    updateScoreDistribution(quizId);
}

function updateScoreDistribution(quizId) {
    const questionsContainer = document.getElementById(`questions-${quizId}`);
    const questionScores = questionsContainer.querySelectorAll('.question-score');
    let totalScore = 0;
    
    questionScores.forEach(input => {
        totalScore += parseFloat(input.value) || 0;
    });
    
    const totalQuizScore = parseFloat(document.querySelector(`input[name="quiz[${quizId}][total_score]"]`).value) || 100;
    
    document.getElementById(`score-sum-${quizId}`).textContent = totalScore.toFixed(2);
    document.getElementById(`score-total-${quizId}`).textContent = totalQuizScore.toFixed(2);
    
    // Change color based on matching
    const infoBox = document.getElementById(`quiz-${quizId}-info`);
    if (Math.abs(totalScore - totalQuizScore) < 0.01) {
        infoBox.classList.remove('alert-warning');
        infoBox.classList.add('alert-success');
    } else {
        infoBox.classList.remove('alert-success');
        infoBox.classList.add('alert-warning');
    }
}

function updateOptions(quizId, questionId, count) {
    const container = document.getElementById(`options-${quizId}-${questionId}`);
    count = parseInt(count);
    
    let optionsHTML = '<label class="form-label">Answer Options</label>';
    
    for (let i = 0; i < count; i++) {
        optionsHTML += `
            <div class="mb-2">
                <div class="input-group">
                    <input type="text" class="form-control" name="quiz[${quizId}][questions][${questionId}][choice][]" placeholder="Option ${i + 1}" required>
                    <div class="input-group-text">
                        <input class="form-check-input mt-0" type="radio" name="quiz[${quizId}][questions][${questionId}][correct]" value="${i}" ${i === 0 ? 'checked' : ''} required>
                        <label class="form-check-label ms-2" style="cursor: pointer;">Correct</label>
                    </div>
                </div>
            </div>
        `;
    }
    
    container.innerHTML = optionsHTML;
}
</script>
