{% extends 'base.html.twig' %}

{% block title %}Available Quizzes{% endblock %}

{% block body %}
<main>
    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h1 class="fs-2 mb-1"><i class="fas fa-list-check me-2"></i>Available Quizzes</h1>
                                <p class="text-body mb-0">Take new quizzes to test your knowledge</p>
                            </div>
                            <a href="{{ path('student_dashboard') }}" class="btn btn-primary">Back to Dashboard</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Content START -->
    <section>
        <div class="container">
            <div class="row g-4">
                {% if availableQuizzes|length > 0 %}
                    {% for quiz in availableQuizzes %}
                        {% set isTaken = quiz in takenQuizzes %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 position-relative">
                                <!-- Status Badge -->
                                <div class="position-absolute top-0 end-0 p-3">
                                    {% if isTaken %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Completed
                                        </span>
                                    {% else %}
                                        <span class="badge bg-info">
                                            <i class="fas fa-star me-1"></i>Available
                                        </span>
                                    {% endif %}
                                </div>

                                <!-- Card Body -->
                                <div class="card-body">
                                    <h5 class="card-title fw-bold mb-2">
                                        <i class="fas fa-question-circle text-primary me-2"></i>{{ quiz.title }}
                                    </h5>
                                    
                                    <!-- Quiz Details -->
                                    <div class="mb-3">
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-chart-bar me-1"></i>Difficulty: <strong>{{ quiz.level|upper }}</strong>
                                            </small>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-list me-1"></i>Questions: <strong>{{ quiz.questions|length }}</strong>
                                            </small>
                                        </div>
                                        <div>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>Duration: <strong>
                                                    {% set minutes = (quiz.duration / 60)|round(0, 'floor') %}
                                                    {% set seconds = quiz.duration % 60 %}
                                                    {{ minutes }}:{{ seconds < 10 ? '0' ~ seconds : seconds }} min
                                                </strong>
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Creator Info -->
                                    <div class="mb-3 pb-3 border-bottom">
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>By: <strong>
                                                {% if quiz.creator %}
                                                    {{ quiz.creator.firstname }} {{ quiz.creator.lastname }}
                                                {% else %}
                                                    Admin
                                                {% endif %}
                                            </strong>
                                        </small>
                                    </div>

                                    <!-- Action Button -->
                                    {% if isTaken %}
                                        <div class="d-grid gap-2">
                                            <a href="#" class="btn btn-secondary btn-sm" disabled>
                                                <i class="fas fa-check me-1"></i>Already Completed
                                            </a>
                                        </div>
                                    {% else %}
                                        <div class="d-grid gap-2">
                                            <a href="#" class="btn btn-primary btn-sm">
                                                <i class="fas fa-play-circle me-1"></i>Start Quiz
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info text-center py-5" role="alert">
                            <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                            <h5>No Quizzes Available</h5>
                            <p class="text-muted mb-0">Check back later for new quizzes or return to your dashboard.</p>
                            <a href="{{ path('student_dashboard') }}" class="btn btn-primary btn-sm mt-3">
                                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
    <!-- Content END -->
</main>
{% endblock %}
