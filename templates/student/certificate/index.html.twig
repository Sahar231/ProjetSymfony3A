{% extends 'base.html.twig' %}

{% block title %}My Certificates & Badges - Student Dashboard{% endblock %}

{% block body %}
<main>
    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h1 class="fs-2 mb-1">My Certificates & Badges</h1>
                                <p class="text-body mb-0">Your achievements and earned certifications</p>
                            </div>
                            <a href="{{ path('student_dashboard') }}" class="btn btn-primary">Back to Dashboard</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Page Content START -->
    <section>
        <div class="container">
            {% if certificates|length > 0 %}
                <div class="row g-4">
                    {% for certificate in certificates %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card certificate-card border-0 shadow-sm h-100" style="transition: transform 0.3s ease, box-shadow 0.3s ease; border-top: 4px solid #667eea;">
                                <div class="card-body d-flex flex-column">
                                    <!-- Badge Icon -->
                                    <div class="text-center mb-4">
                                        <div class="badge-icon rounded-circle p-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: inline-flex; justify-content: center; align-items: center; width: 100px; height: 100px;">
                                            <i class="fas fa-medal text-white" style="font-size: 3rem;"></i>
                                        </div>
                                    </div>

                                    <!-- Certificate Info -->
                                    <h5 class="card-title text-center mb-3">
                                        {{ certificate.formation.title }}
                                    </h5>

                                    <div class="flex-grow-1">
                                        <!-- Formation Details -->
                                        <div class="mb-3">
                                            <small class="text-muted d-block mb-2"><i class="fas fa-layer-group me-2"></i>Level</small>
                                            <span class="badge bg-info rounded-pill">
                                                {{ certificate.formation.level ?? 'Standard' }}
                                            </span>
                                        </div>

                                        <!-- Duration -->
                                        <div class="mb-3">
                                            <small class="text-muted d-block mb-2"><i class="fas fa-hourglass-half me-2"></i>Duration</small>
                                            <span class="badge bg-primary rounded-pill">
                                                {% if certificate.formation.duration %}
                                                    {{ certificate.formation.duration }} {% if certificate.formation.duration == 1 %}week{% else %}weeks{% endif %}
                                                {% else %}
                                                    Self-paced
                                                {% endif %}
                                            </span>
                                        </div>

                                        <!-- Score -->
                                        <div class="mb-3">
                                            <small class="text-muted d-block mb-2"><i class="fas fa-star me-2"></i>Score Achieved</small>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: {{ certificate.score }}%;" aria-valuenow="{{ certificate.score }}" aria-valuemin="0" aria-valuemax="100">
                                                    <strong>{{ certificate.score|round(2) }}%</strong>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Award Date -->
                                        <div class="mb-4">
                                            <small class="text-muted d-block mb-2"><i class="fas fa-calendar-alt me-2"></i>Awarded On</small>
                                            <p class="mb-0"><strong>{{ certificate.awardedAt|date('F d, Y') }}</strong></p>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="d-grid gap-2">
                                        <a href="{{ path('student_certificate_show', { id: certificate.id }) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-2"></i>View Certificate
                                        </a>
                                        <a href="{{ path('student_certificate_download', { id: certificate.id }) }}" class="btn btn-success btn-sm">
                                            <i class="fas fa-download me-2"></i>Download PDF
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Statistics Section -->
                <div class="row g-4 mt-5">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="card-body text-center">
                                <h3 class="card-title mb-2">{{ certificates|length }}</h3>
                                <p class="card-text mb-0">Certificates Earned</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm bg-gradient text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                            <div class="card-body text-center">
                                <h3 class="card-title mb-2">
                                    {% if certificates|length > 0 %}
                                        {% set total = 0 %}
                                        {% for cert in certificates %}
                                            {% set total = total + cert.score %}
                                        {% endfor %}
                                        {% set avgScore = total / certificates|length %}
                                        {{ avgScore|round(2) }}%
                                    {% else %}
                                        0%
                                    {% endif %}
                                </h3>
                                <p class="card-text mb-0">Average Score</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm bg-gradient text-white" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <div class="card-body text-center">
                                <h3 class="card-title mb-2">
                                    {% set totalHours = 0 %}
                                    {% for cert in certificates %}
                                        {% set totalHours = totalHours + (cert.formation.duration ?? 0) %}
                                    {% endfor %}
                                    {{ totalHours }}
                                </h3>
                                <p class="card-text mb-0">Total Study Hours</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <div class="mb-4">
                                    <i class="fas fa-badge text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                                </div>
                                <h4 class="mb-3">No Certificates Yet</h4>
                                <p class="text-muted mb-4">
                                    You haven't earned any certificates yet. Enroll in formations and pass the quizzes to earn badges and certificates!
                                </p>
                                <a href="{{ path('student_formations') }}" class="btn btn-primary">
                                    <i class="fas fa-graduation-cap me-2"></i>Browse Formations
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
    <!-- Page Content END -->
</main>
{% endblock %}
