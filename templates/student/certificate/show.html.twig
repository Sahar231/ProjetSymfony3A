{% extends 'base.html.twig' %}

{% block title %}{{ certificate.formation.title }} - Certificate{% endblock %}

{% block body %}
<main>
    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h1 class="fs-2 mb-1">{{ certificate.formation.title }}</h1>
                                <p class="text-body mb-0">Certificate Details</p>
                            </div>
                            <a href="{{ path('student_certificate_index') }}" class="btn btn-primary">Back to Certificates</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Page Content START -->
    <section>
        <div class="container">
            <div class="row g-4">
                <!-- Certificate Display -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="card-body p-5 text-white text-center">
                            <!-- Certificate Border -->
                            <div class="position-relative">
                                <div class="border-3 border-white rounded p-4" style="min-height: 500px; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                                    <!-- Badge Icon -->
                                    <div class="mb-4">
                                        <i class="fas fa-medal" style="font-size: 5rem;"></i>
                                    </div>

                                    <!-- Certificate Title -->
                                    <h2 class="mb-2">Certificate of Completion</h2>
                                    <p class="mb-4">This certifies that</p>

                                    <!-- Student Name -->
                                    <h3 class="mb-4" style="font-size: 2rem; font-weight: 300;">
                                        <strong>{{ app.user.fullName }}</strong>
                                    </h3>

                                    <!-- Achievement Text -->
                                    <p class="mb-3">has successfully completed the formation</p>

                                    <!-- Formation Name -->
                                    <h4 class="mb-4" style="font-size: 1.5rem; font-weight: 300;">
                                        <strong>{{ certificate.formation.title }}</strong>
                                    </h4>

                                    <!-- Details -->
                                    <div class="row g-3 mb-4">
                                        <div class="col-md-4">
                                            <small>Level</small>
                                            <p class="mb-0"><strong>{{ certificate.formation.level ?? 'Standard' }}</strong></p>
                                        </div>
                                        <div class="col-md-4">
                                            <small>Duration</small>
                                            <p class="mb-0">
                                                <strong>
                                                    {% if certificate.formation.duration %}
                                                        {{ certificate.formation.duration }} {% if certificate.formation.duration == 1 %}week{% else %}weeks{% endif %}
                                                    {% else %}
                                                        Self-paced
                                                    {% endif %}
                                                </strong>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <small>Score</small>
                                            <p class="mb-0"><strong>{{ certificate.score|round(2) }}%</strong></p>
                                        </div>
                                    </div>

                                    <!-- Date -->
                                    <p class="mb-0">
                                        <small>Awarded on {{ certificate.awardedAt|date('F d, Y') }}</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Download Button -->
                    <div class="mt-4">
                        <a href="{{ path('student_certificate_download', { id: certificate.id }) }}" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-download me-2"></i>Download as PDF
                        </a>
                    </div>
                </div>

                <!-- Certificate Details Sidebar -->
                <div class="col-lg-4">
                    <!-- Formation Info -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0"><i class="fas fa-book me-2"></i>Formation Details</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">
                                <small class="text-muted d-block mb-2">Formation Title</small>
                                <strong>{{ certificate.formation.title }}</strong>
                            </p>
                            <p class="mb-3">
                                <small class="text-muted d-block mb-2">Level</small>
                                <span class="badge bg-info rounded-pill">{{ certificate.formation.level ?? 'Standard' }}</span>
                            </p>
                            <p class="mb-3">
                                <small class="text-muted d-block mb-2">Duration</small>
                                <span class="badge bg-primary rounded-pill">
                                    {% if certificate.formation.duration %}
                                        {{ certificate.formation.duration }} {% if certificate.formation.duration == 1 %}week{% else %}weeks{% endif %}
                                    {% else %}
                                        Self-paced
                                    {% endif %}
                                </span>
                            </p>
                            <p class="mb-0">
                                <small class="text-muted d-block mb-2">Created on</small>
                                <strong>{{ certificate.formation.createdAt|date('F d, Y') }}</strong>
                            </p>
                        </div>
                    </div>

                    <!-- Quiz Info (if applicable) -->
                    {% if certificate.quiz %}
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0"><i class="fas fa-question-circle me-2"></i>Quiz Details</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-3">
                                    <small class="text-muted d-block mb-2">Quiz Title</small>
                                    <strong>{{ certificate.quiz.title }}</strong>
                                </p>
                                <p class="mb-3">
                                    <small class="text-muted d-block mb-2">Difficulty</small>
                                    <span class="badge bg-warning rounded-pill">{{ certificate.quiz.difficulty }}</span>
                                </p>
                                <p class="mb-0">
                                    <small class="text-muted d-block mb-2">Passing Score Required</small>
                                    <strong>{{ certificate.quiz.passScore }}%</strong>
                                </p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Achievement Stats -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0"><i class="fas fa-star me-2"></i>Achievement</h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: {{ certificate.score }}%;" aria-valuenow="{{ certificate.score }}" aria-valuemin="0" aria-valuemax="100">
                                        <strong>{{ certificate.score|round(2) }}%</strong>
                                    </div>
                                </div>
                            </div>
                            <p class="text-muted mb-0">
                                Your score on the assessment
                            </p>
                        </div>
                    </div>

                    <!-- Share Certificate -->
                    <div class="card border-0 shadow-sm mt-4">
                        <div class="card-body text-center">
                            <h6 class="mb-3">Share Your Achievement</h6>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary btn-sm" onclick="shareToLinkedIn()">
                                    <i class="fab fa-linkedin me-2"></i>Share on LinkedIn
                                </button>
                                <button class="btn btn-outline-info btn-sm" onclick="shareToTwitter()">
                                    <i class="fab fa-twitter me-2"></i>Share on Twitter
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content END -->
</main>

<script>
function shareToLinkedIn() {
    const url = window.location.href;
    const title = "{{ certificate.formation.title }} - Certificate";
    window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`, '_blank');
}

function shareToTwitter() {
    const url = window.location.href;
    const text = "I just earned a certificate for {{ certificate.formation.title }}!";
    window.open(`https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`, '_blank');
}
</script>
{% endblock %}
