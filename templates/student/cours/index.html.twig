{% extends 'base.html.twig' %}

{% block title %}Mes Cours - Étudiant{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Tableau de Bord Étudiant - Cours Approuvés</h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Cours Disponibles</h6>
                    <h2>{{ courses|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Instructeurs</h6>
                    <h2>{{ uniqueInstructorsCount ?? 0 }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Catégories</h6>
                    <h2>{{ uniqueCategoriesCount ?? 0 }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title text-uppercase">Chapitres</h6>
                    <h2>{{ totalChaptersCount ?? 0 }}</h2>
                </div>
            </div>
        </div>
    </div>

    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'success' ? 'success' : 'info' }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    {% if courses|length == 0 %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun cours approuvé disponible pour le moment.
        </div>
    {% else %}
        <!-- Search, Filter and Sort -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body">
                <form method="GET" class="row g-3" id="studentSearchForm">
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="studentSearch" placeholder="Rechercher par titre ou catégorie...">
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="studentInstructorFilter">
                            <option value="">Tous les instructeurs</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="studentCategoryFilter">
                            <option value="">Todas les catégories</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" id="studentSort">
                            <option value="title">Trier par: Titre (A-Z)</option>
                            <option value="title-desc">Titre (Z-A)</option>
                            <option value="date">Date (récent)</option>
                            <option value="date-old">Date (ancien)</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="reset" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Courses Display -->
        <div class="row" id="studentCoursesContainer">
            {% for cours in courses %}
                <div class="col-md-6 col-lg-4 mb-4 student-course-card" 
                     data-title="{{ cours.title }}" 
                     data-category="{{ cours.category ?? 'Général' }}" 
                     data-instructor="{{ cours.createdBy }}"
                     data-date="{{ cours.createdAt|date('Y-m-d H:i:s') }}">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body">
                            <div class="mb-2">
                                <span class="badge bg-info">{{ cours.category ?? 'Général' }}</span>
                            </div>
                            <h5 class="card-title">{{ cours.title }}</h5>
                            <p class="card-text text-muted small">
                                <i class="bi bi-person"></i> Par {{ cours.createdBy }}
                            </p>
                            {% set desc = cours.description|default('') %}
                            <p class="card-text text-muted">{{ desc|length > 80 ? desc|slice(0, 80) ~ '...' : desc }}</p>
                        </div>
                        <div class="card-footer bg-white border-top">
                            <div class="d-grid gap-2">
                                <a href="{{ path('student_cours_show', {id: cours.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> Voir les détails
                                </a>
                                <a href="{{ path('student_chapitre_index', {coursId: cours.id}) }}" class="btn btn-secondary btn-sm">
                                    <i class="bi bi-book"></i> Consulter les {{ cours.chapitres|length }} chapitres
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const studentSearch = document.getElementById('studentSearch');
    const studentInstructorFilter = document.getElementById('studentInstructorFilter');
    const studentCategoryFilter = document.getElementById('studentCategoryFilter');
    const studentSort = document.getElementById('studentSort');
    const courseCards = document.querySelectorAll('.student-course-card');

    // Get unique instructors and categories
    let instructors = new Set();
    let categories = new Set();
    courseCards.forEach(card => {
        const instructor = card.dataset.instructor;
        const category = card.dataset.category;
        if (instructor) instructors.add(instructor);
        if (category) categories.add(category);
    });

    // Populate instructor filter
    Array.from(instructors).sort().forEach(instructor => {
        const option = document.createElement('option');
        option.value = instructor;
        option.textContent = instructor;
        studentInstructorFilter.appendChild(option);
    });

    // Populate category filter
    Array.from(categories).sort().forEach(category => {
        const option = document.createElement('option');
        option.value = category;
        option.textContent = category;
        studentCategoryFilter.appendChild(option);
    });

    // Filter and Sort function for cards
    function filterAndSortCards(searchInput, instructorSelect, categorySelect, sortSelect) {
        const searchValue = searchInput.value.toLowerCase();
        const instructorValue = instructorSelect.value;
        const categoryValue = categorySelect.value;
        const sortType = sortSelect.value;
        
        const visibleCards = Array.from(courseCards).filter(card => {
            // Search filter (Title or Category)
            const title = card.dataset.title.toLowerCase();
            const category = card.dataset.category.toLowerCase();
            const searchMatch = title.includes(searchValue) || category.includes(searchValue);

            // Instructor filter
            let instructorMatch = true;
            if (instructorValue) {
                const cardInstructor = card.dataset.instructor;
                instructorMatch = cardInstructor === instructorValue;
            }

            // Category filter
            let categoryMatch = true;
            if (categoryValue) {
                const cardCategory = card.dataset.category;
                categoryMatch = cardCategory === categoryValue;
            }
            
            return searchMatch && instructorMatch && categoryMatch;
        });

        // Sort cards
        visibleCards.sort((a, b) => {
            let aValue, bValue;
            
            if (sortType === 'title' || sortType === 'title-desc') {
                aValue = a.dataset.title.toLowerCase();
                bValue = b.dataset.title.toLowerCase();
            } else if (sortType === 'date' || sortType === 'date-old') {
                aValue = new Date(a.dataset.date);
                bValue = new Date(b.dataset.date);
            }

            if (sortType.includes('desc') || sortType === 'date-old') {
                return bValue > aValue ? 1 : -1;
            } else {
                return aValue > bValue ? 1 : -1;
            }
        });

        // Show/hide cards
        courseCards.forEach(card => {
            card.style.display = 'none';
        });
        visibleCards.forEach(card => {
            card.style.display = '';
        });

        // Show empty message if no results
        const container = document.getElementById('studentCoursesContainer');
        let emptyMsg = container.nextElementSibling;
        if (emptyMsg && emptyMsg.classList.contains('alert-empty')) {
            emptyMsg.remove();
        }
        if (visibleCards.length === 0) {
            const emptyDiv = document.createElement('div');
            emptyDiv.className = 'alert alert-info alert-empty';
            emptyDiv.textContent = 'Aucun cours ne correspond à votre recherche.';
            container.parentElement.insertAdjacentElement('afterend', emptyDiv);
        }
    }

    // Event listeners
    const updateResults = () => filterAndSortCards(studentSearch, studentInstructorFilter, studentCategoryFilter, studentSort);
    
    studentSearch.addEventListener('input', updateResults);
    studentInstructorFilter.addEventListener('change', updateResults);
    studentCategoryFilter.addEventListener('change', updateResults);
    studentSort.addEventListener('change', updateResults);

    // Reset form
    document.getElementById('studentSearchForm').addEventListener('reset', () => {
        setTimeout(updateResults, 0);
    });
});
</script>

<style>
.hover-shadow {
    transition: box-shadow 0.3s ease;
}

.hover-shadow:hover {
    box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
    transform: translateY(-2px);
}
</style>
{% endblock %}
