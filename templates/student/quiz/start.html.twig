{% extends 'base.html.twig' %}

{% block title %}{{ quiz.Title }} - Quiz{% endblock %}

{% block body %}
<main>
    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h1 class="fs-2 mb-1">{{ quiz.Title }}</h1>
                                <p class="text-body mb-0">{{ quiz.Formation.title }}</p>
                            </div>
                            <a href="{{ path('student_formation_view', { id: quiz.Formation.id }) }}" class="btn btn-primary">Back to Formation</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Page Content START -->
    <section>
        <div class="container">
            <div class="row g-4">
                <!-- Main Quiz Content -->
                <div class="col-lg-8">
                    <!-- Quiz Instructions -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Quiz Instructions</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">
                                Answer all the questions below. Your score will be calculated automatically after submission.
                                <strong>You need to score {{ quiz.passScore }}% or higher to pass the quiz.</strong>
                            </p>
                        </div>
                    </div>

                    <!-- Quiz Form -->
                    <form method="POST" action="{{ path('student_quiz_submit', { id: quiz.id }) }}" id="quizForm">
                        {% if quiz.questions|length > 0 %}
                            {% for question in quiz.questions %}
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-body">
                                        <!-- Question Number and Title -->
                                        <div class="mb-4">
                                            <h6 class="card-title mb-3">
                                                <span class="badge bg-primary rounded-pill me-2">Question {{ loop.index }}/{{ quiz.questions|length }}</span>
                                                <span class="badge bg-warning rounded-pill">{{ question.score }} pts</span>
                                            </h6>
                                            <p class="mb-0">{{ question.question|raw }}</p>
                                        </div>

                                        <!-- Question Type: Multiple Choice (MCQ) -->
                                        {% if question.type == 'qcm' and question.choices %}
                                            <div class="question-options">
                                                {% for choice in question.choices %}
                                                    <div class="form-check mb-3">
                                                        <input 
                                                            class="form-check-input" 
                                                            type="radio" 
                                                            name="question_{{ question.id }}" 
                                                            id="choice_{{ question.id }}_{{ loop.index0 }}"
                                                            value="{{ choice }}"
                                                            required
                                                        >
                                                        <label class="form-check-label" for="choice_{{ question.id }}_{{ loop.index0 }}">
                                                            {{ choice }}
                                                        </label>
                                                    </div>
                                                {% endfor %}
                                            </div>

                                        <!-- Fallback for text input -->
                                        {% else %}
                                            <div class="mb-3">
                                                <input 
                                                    type="text" 
                                                    class="form-control form-control-lg"
                                                    name="question_{{ question.id }}"
                                                    placeholder="Enter your answer here..."
                                                    required
                                                >
                                                <small class="text-muted d-block mt-2">
                                                    Type your answer in the text field above
                                                </small>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}

                            <!-- Submit Button -->
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Are you sure you want to submit your answers? You cannot change them after submission.');">
                                        <i class="fas fa-check-circle me-2"></i>Submit Answers
                                    </button>
                                    <a href="{{ path('student_formation_view', { id: quiz.Formation.id }) }}" class="btn btn-outline-secondary btn-lg ms-2">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-warning border-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>No questions in this quiz yet.</strong>
                            </div>
                            <a href="{{ path('student_formation_view', { id: quiz.Formation.id }) }}" class="btn btn-primary">
                                Back to Formation
                            </a>
                        {% endif %}
                    </form>
                </div>

                <!-- Quiz Summary Sidebar -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0"><i class="fas fa-list me-2"></i>Quiz Summary</h5>
                        </div>
                        <div class="card-body">
                            <!-- Quiz Info -->
                            <div class="mb-4">
                                <small class="text-muted d-block mb-2">Category</small>
                                <p class="mb-0"><strong>{{ quiz.Category }}</strong></p>
                            </div>

                            <div class="mb-4">
                                <small class="text-muted d-block mb-2">Difficulty</small>
                                <span class="badge bg-info rounded-pill">
                                    {{ quiz.difficulty }}
                                </span>
                            </div>

                            <div class="mb-4 pt-3 border-top">
                                <small class="text-muted d-block mb-2">Total Points</small>
                                <p class="mb-0"><strong>{{ quiz.totalScore }} pts</strong></p>
                            </div>

                            <div class="mb-4 pt-3 border-top">
                                <small class="text-muted d-block mb-2">Total Questions</small>
                                <p class="mb-0"><strong>{{ quiz.questions|length }}</strong></p>
                            </div>

                            <div class="mb-4">
                                <small class="text-muted d-block mb-2">Pass Score</small>
                                <span class="badge bg-success rounded-pill" style="font-size: 0.95rem; padding: 0.5rem 0.75rem;">
                                    {{ quiz.passScore }}%
                                </span>
                            </div>

                            <div class="mb-4 pt-3 border-top">
                                <small class="text-muted d-block mb-2">Duration</small>
                                <p class="mb-0"><strong>Self-paced</strong></p>
                            </div>

                            <!-- Formation Link -->
                            <div class="pt-3 border-top">
                                <a href="{{ path('student_formation_view', { id: quiz.Formation.id }) }}" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Formation
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content END -->
</main>

<script>
// Auto-save progress (optional)
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('quizForm');
    if (form) {
        // Save form data every 30 seconds
        setInterval(function() {
            const formData = new FormData(form);
            localStorage.setItem('quizProgress_{{ quiz.id }}', JSON.stringify(Object.fromEntries(formData)));
        }, 30000);
    }
});
</script>
{% endblock %}
