{% extends 'base.html.twig' %}

{% block title %}Quiz Results - {{ quiz.Title }}{% endblock %}

{% block body %}
<main>
    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <h1 class="fs-2 mb-1">Quiz Results</h1>
                        <p class="text-body mb-0">{{ quiz.Formation.title }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Page Content START -->
    <section>
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-lg-8">
                    <!-- Result Card -->
                    <div class="card border-0 shadow-lg">
                        <div class="card-body text-center py-5">
                            <!-- Score Display -->
                            <div class="mb-5">
                                <h2 class="display-4 fw-bold mb-3" style="color: {% if passed %}#28a745{% else %}#dc3545{% endif %};">
                                    {{ score|round(2) }}%
                                </h2>
                                <p class="lead text-muted mb-0">
                                    Your Score
                                </p>
                            </div>

                            <!-- Result Status -->
                            {% if passed %}
                                <!-- PASSED -->
                                <div class="alert alert-success border-0 mb-4" role="alert">
                                    <div class="fs-5 mb-2">
                                        <i class="fas fa-check-circle me-2"></i>
                                        <strong>Congratulations! You Passed!</strong>
                                    </div>
                                    <p class="mb-0">
                                        You scored <strong>{{ score|round(2) }}%</strong> which is above the passing threshold of <strong>{{ passScore|round(2) }}%</strong>
                                    </p>
                                </div>

                                <!-- Certificate Badge -->
                                {% if certificate %}
                                    <div class="alert alert-info border-0 mb-4" role="alert">
                                        <div class="fs-6 mb-2">
                                            <i class="fas fa-award me-2"></i>
                                            <strong>Certificate Awarded!</strong>
                                        </div>
                                        <p class="mb-0">
                                            You have earned a certificate for completing this quiz. Check your <a href="{{ path('student_certificate_index') }}">certificates gallery</a>.
                                        </p>
                                    </div>
                                {% else %}
                                    <div class="alert alert-warning border-0 mb-4" role="alert">
                                        <div class="fs-6 mb-2">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>You already have a certificate for this</strong>
                                        </div>
                                        <p class="mb-0">
                                            You've already earned a certificate for this formation. Check your <a href="{{ path('student_certificate_index') }}">certificates gallery</a>.
                                        </p>
                                    </div>
                                {% endif %}

                            {% else %}
                                <!-- NOT PASSED -->
                                <div class="alert alert-danger border-0 mb-4" role="alert">
                                    <div class="fs-5 mb-2">
                                        <i class="fas fa-times-circle me-2"></i>
                                        <strong>Quiz Not Passed</strong>
                                    </div>
                                    <p class="mb-0">
                                        You scored <strong>{{ score|round(2) }}%</strong> but need <strong>{{ passScore|round(2) }}%</strong> to pass.
                                        You need <strong>{{ (passScore - score)|round(2) }}%</strong> more points.
                                    </p>
                                </div>

                                <div class="alert alert-info border-0 mb-4" role="alert">
                                    <p class="mb-0">
                                        <i class="fas fa-lightbulb me-2"></i>
                                        Review the material and try again to improve your score.
                                    </p>
                                </div>
                            {% endif %}

                            <!-- Quiz Summary -->
                            <div class="row g-3 mb-5">
                                <div class="col-md-4">
                                    <div class="p-3 bg-light rounded">
                                        <p class="text-muted small mb-1">Total Points</p>
                                        <p class="h5 mb-0"><strong>{{ quiz.totalScore }} pts</strong></p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-3 bg-light rounded">
                                        <p class="text-muted small mb-1">Questions</p>
                                        <p class="h5 mb-0"><strong>{{ quiz.questions|length }}</strong></p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-3 bg-light rounded">
                                        <p class="text-muted small mb-1">Pass Score</p>
                                        <p class="h5 mb-0"><strong>{{ passScore|round(2) }}%</strong></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="{{ path('student_formation_view', { id: formation.id }) }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Formation
                                </a>
                                {% if not passed %}
                                    <a href="{{ path('student_quiz_start', { id: quiz.id }) }}" class="btn btn-outline-primary btn-lg">
                                        <i class="fas fa-redo me-2"></i>Try Again
                                    </a>
                                {% else %}
                                    <a href="{{ path('student_certificate_index') }}" class="btn btn-outline-success btn-lg">
                                        <i class="fas fa-medal me-2"></i>View Certificates
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content END -->
</main>
{% endblock %}
