{% extends 'base.html.twig' %}

{% block title %}Quiz Results - {{ quiz.Title }}{% endblock %}

{% block body %}
<main>
    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background:url(/assets/images/pattern/04.png) no-repeat center center; background-size:cover;"></div>
        </div>
        <div class="container mt-n4 mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h1 class="fs-2 mb-1">Quiz Results - {{ quiz.Title }}</h1>
                                <p class="text-body mb-0">{{ quiz.Formation.title }} - View Only</p>
                            </div>
                            <a href="{{ path('student_formation_view', { id: formation.id }) }}" class="btn btn-primary">Back to Formation</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Banner END -->

    <!-- Page Content START -->
    <section>
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-lg-8">
                    <!-- Result Card -->
                    <div class="card border-0 shadow-lg">
                        <div class="card-body text-center py-5">
                            <!-- Status Badge -->
                            <div class="mb-4">
                                <span class="badge bg-success fs-6 p-3">
                                    <i class="fas fa-check-circle me-2"></i>Quiz Passed
                                </span>
                            </div>

                            <!-- Score Display -->
                            <div class="mb-5">
                                <h2 class="display-4 fw-bold mb-3" style="color: #28a745;">
                                    {{ certificate.score|round(2) }}%
                                </h2>
                                <p class="lead text-muted mb-0">Your Score</p>
                            </div>

                            <!-- Passed Status -->
                            <div class="alert alert-success border-0 mb-4" role="alert">
                                <div class="fs-5 mb-2">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <strong>Congratulations! You Passed!</strong>
                                </div>
                                <p class="mb-2">
                                    You scored <strong>{{ certificate.score|round(2) }}%</strong> which is above the passing threshold of <strong>{{ quiz.passScore|round(2) }}%</strong>
                                </p>
                                <p class="mb-0">
                                    <small class="text-muted">Completed on {{ certificate.awardedAt|date('d M, Y H:i') }}</small>
                                </p>
                            </div>

                            <!-- Certificate Info -->
                            <div class="alert alert-info border-0 mb-4" role="alert">
                                <div class="fs-6 mb-2">
                                    <i class="fas fa-award me-2"></i>
                                    <strong>Certificate Awarded!</strong>
                                </div>
                                <p class="mb-0">
                                    You have earned a certificate for completing this quiz. Check your <a href="{{ path('student_certificate_index') }}">certificates gallery</a>.
                                </p>
                            </div>

                            <!-- Info: View Only -->
                            <div class="alert alert-warning border-0 mb-4" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>This quiz is read-only</strong> - Since you have already passed this quiz, you cannot retake it. You can only view the questions and correct answers below.
                            </div>

                            <!-- Quiz Summary -->
                            <hr class="my-5">
                            <div class="row g-3 text-start">
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="d-block text-muted fw-bold mb-1">
                                            <i class="fas fa-list-check me-2"></i>Total Questions
                                        </small>
                                        <p class="mb-0 fs-5">{{ quiz.totalQuestions }}</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="d-block text-muted fw-bold mb-1">
                                            <i class="fas fa-star me-2"></i>Difficulty
                                        </small>
                                        <p class="mb-0 fs-5">
                                            <span class="badge bg-primary">{{ quiz.difficulty }}</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="d-block text-muted fw-bold mb-1">
                                            <i class="fas fa-check-circle me-2"></i>Pass Score Required
                                        </small>
                                        <p class="mb-0 fs-5">{{ quiz.passScore|round(2) }}%</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <small class="d-block text-muted fw-bold mb-1">
                                            <i class="fas fa-clock me-2"></i>Completion Date
                                        </small>
                                        <p class="mb-0 fs-5">{{ certificate.awardedAt|date('M d, Y') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quiz Questions & Answers Preview -->
                    <div class="card border-0 shadow-sm mt-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0"><i class="fas fa-book me-2"></i>Questions & Answers Reference</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-4">Below is a reference of all questions and the correct answers for your review:</p>

                            {% if quiz.questions|length > 0 %}
                                {% for question in quiz.questions %}
                                    <div class="card border-left border-success shadow-sm mb-4">
                                        <div class="card-body">
                                            <!-- Question Number and Title -->
                                            <div class="mb-3">
                                                <h6 class="card-title mb-2">
                                                    <span class="badge bg-primary rounded-pill me-2">Question {{ loop.index }}/{{ quiz.questions|length }}</span>
                                                    <span class="badge bg-warning rounded-pill">{{ question.score }} pts</span>
                                                </h6>
                                                <p class="mb-0">{{ question.question|raw }}</p>
                                            </div>

                                            <!-- Correct Answer Display -->
                                            <div class="alert alert-success bg-light border-success mb-0 mt-3">
                                                <small class="d-block text-muted fw-bold mb-1">
                                                    <i class="fas fa-check-circle me-2 text-success"></i>Correct Answer:
                                                </small>
                                                <p class="mb-0 fw-bold text-dark">
                                                    {{ question.reply }}
                                                </p>
                                            </div>

                                            <!-- Question Type Info -->
                                            {% if question.type == 'qcm' and question.choices %}
                                                <div class="mt-3">
                                                    <small class="text-muted fw-bold">Available Options:</small>
                                                    <ul class="small text-muted mt-2 mb-0">
                                                        {% for choice in question.choices %}
                                                            <li>{{ choice }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="alert alert-info border-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No questions available for this quiz.
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-sm-flex justify-content-center gap-3 mt-4">
                        <a href="{{ path('student_formation_view', { id: formation.id }) }}" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Formation
                        </a>
                        <a href="{{ path('student_certificate_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-trophy me-2"></i>View My Certificates
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content END -->
</main>
{% endblock %}
